.block-container
  clearfix()
  display flex
  flex-flow row nowrap
  position relative  
    
.block-content
  height 100vh
  flex-grow 1
  position relative
  display flex
  align-items center
  justify-content center
  overflow scroll

  &__info
    position absolute
    bottom 0
    width 100%
    padding unit 0
    text-align center
    display none
    &__title, &__date
      padding-bottom (unit / 4)
    &__title, &__source, &__toggle-info
      font-weight bold
    &__date, &__source, &__toggle-info
      font-size 0.8rem
      line-height 1.2rem
      color lightgray
    &__toggle-info
      z-index 2001
      position absolute
      bottom unit
      right unit
      display inline-block
      cursor pointer
      &:hover
        color hovergray

  &.is-wide
    .block-content__info
      display block  

.block-img
  padding 0 unit
  img
    max-height 80vh
    width auto
    max-width 100%
    +below(800px)
      max-width 100vw

.block-media
  position relative
  margin 0 auto

  +below(800px)
    max-width 100vw

.block-meta
  margin-top unit * 3
  > a
    font-weight bold

.block-text
  > p
    p()
    margin-top unit

  ul
    ul()

  a
    font-weight bold

  > h1, h2, h3, h4, h5, pre
    margin unit 0

  blockquote
    margin unit 0


.block-text
  p()
  font-family font_serif
  color #333
  background-color #fff
  border 1px solid bordergray
  width 90%
  max-width 740px
  margin (unit * 2) auto
  overflow-x auto
  padding unit * 2
  text-align left
  min-height 80vh
  font-size 1.2rem
  line-height 1.7em
  max-height 80vh
  overflow scroll

  +below(800px)
    height 50vh
    border-color transparent
    padding unit

  p
    p()
    font-size 1.2rem
    line-height 1.7em

    &:first-child
      margin-top 0

    &:last-child
      margin-bottom 0

  ul
    ul: 'square'

  ol
    ol()

  hr
    rule()

  img
    max-width 100%

  > form textarea
    resize vertical
    padding unit * 2
    font-family font_serif
    line-height 1.7em

  .attr-value
    height auto

  +below(800px)
    width 90%

.block-attachment
  .iconic-property-fill
    fill textgray

.block-video
  video
    max-width 65%
    height auto

.block-meta--attribution
  position absolute
  bottom unit
  right unit
  color lightgray

.block-connect-container
  position relative

  &.is-active
    border 1px solid bordergray
    margin -(unit * 3) auto 0
    width 315px
    height 315px

  .new-connection
    background-color #fff

.button--base--connect
  text-align center
  width 100%
  border-top none

  &:hover
    border-top none
    
.block-arrow
  cursor pointer
  height 100%
  width 10vw
  opacity 0
  display none
  z-index 1
  margin-right auto
  align-items center
  justify-content center

  +below(800px)
    height 90vh
    width 10vw

  &:hover
    opacity 1

.modalize .block-arrow
  display flex

  svg.iconic.iconic-md:not(.iconic-size-sm):not(.iconic-size-lg)
    width 20px
    height 20px

.block-arrow--right
  margin-right 0
  margin-left auto

.js-url-connections-list h5
  text-align center
  font-weight normal
  margin unit 0
  font-size 0.7rem
  text-transform uppercase
  color lightgray

.tab--container--block
  width 100%

  .tab--container__nav
    border-bottom 1px solid bordergray

  .tab--container__nav__item
    padding 0 unit

    +below(800px)
      display inline-block
      width auto
      padding 0 (unit/2)
      h5
        font-size 0.8rem

  .tab-content
    background-color white
    min-height 30vh
    padding-bottom (unit * 3)

  .tab-content__inner
    margin unit auto

    +below(800px)
      width 90%

.block-connection-outer
  display table
  width 100%
  margin-bottom (unit / 2)

#tab-info
  .block-title
    display block
    > form input
      text-align center

  .block-description
    p()
    display block
    margin (unit * 2) auto 0
    p
      p()

    +below(800px)
      width 100%

.block-new-comment-container
  margin-top unit * 2
  font-size 14px

.comment-list
  font-size 14px
  p
    p 14px

@require 'sidebar'