.block-container
  // nothing
  clearfix()

.block-content
  position absolute
  top 0
  left 0
  height 100%
  width 100%

.block-img
  img
    max-height 80vh
    width auto
    max-width 80vw

    +below(800px)
      max-width 100vw
      max-height 100vh

.block-media
  ratio-box(16/9)
  max-width 50vw
  position relative
  margin 0 auto

  iframe
    position absolute
    top 0
    left 0
    width 100%
    height 100%

  +below(800px)
    max-width 100vw

.block-meta
  margin-top unit * 3
  > a
    font-weight bold

.block-text, .block-description
  > p
    p()
    margin-top unit

  a
    font-weight bold

  > h1, h2, h3, h4, h5, pre
    margin-bottom unit

  blockquote
    margin unit 0

.block-text
  p()
  background-color #fff
  border 1px solid bordergray
  width 55%
  margin 0 auto
  overflow-x auto
  padding unit * 2
  text-align left
  height 80vh
  font-size 1.1rem
  line-height 1.7em

  > p
    font-size 1.1rem
    line-height 1.7em

    &:first-child
      margin-top 0

    &:last-child
      margin-bottom 0

  > ul
    ul: 'square'

  > form textarea
    resize vertical
    padding unit * 2

.block-attachment
  .iconic-property-fill
    fill textgray

.block-meta--attribution
  position absolute
  bottom unit
  right unit
  color lightgray

.button--base--connect
  text-align center

.block-date
  font-size 0.8rem
  text-align right
  line-height 1.3rem
  > a
    font-weight bold

.block-arrow
  position absolute
  top 0
  cursor pointer
  height 100vh
  width 20vw
  opacity 0
  display none

  &:hover
    opacity 1

.modalize .block-arrow
  display table

.block-arrow--right
  right 0

.tab--container--block
  position absolute
  top 100%
  width 100%
  margin-top -50px

  .tab--container__nav
    border-bottom 1px solid bordergray

  .tab--container__nav__item
    padding 0 unit

    +below(800px)
      display inline-block
      width auto
      padding 0 (unit/2)
      h5
        font-size 0.8rem

  .tab-content
    background-color white
    min-height 30vh
    padding-bottom (unit * 3)

  .tab-content__inner
    width 50%
    margin unit auto

    +below(800px)
      width 90%

.block-connection-outer
  display table
  width 100%
  margin-bottom unit

#tab-info
  .block-title
    display block
    > form input
      text-align center

  .block-description
    p()
    display block
    margin (unit * 2) auto 0
    p
      p()

    +below(800px)
      width 100%

.block-new-comment-container
  margin-top unit * 2
