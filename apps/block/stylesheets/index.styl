.block-container
  // nothing

.block-content
  position absolute
  top 0
  left 0
  height 100%
  width 100%

.block-img
  img
    max-height 80vh
    width auto

.block-description
  p()
  margin-top unit * 2
  padding 0 (unit * 2)

.block-meta
  margin-top unit * 3
  > a
    font-weight bold

.block-text, .block-description
  > p
    p()
    margin-top unit

  a
    font-weight bold

  > h1, h2, h3, h4, h5, pre
    margin-bottom unit

.block-text
  p()
  background-color #fff
  border 1px solid bordergray
  width 60%
  margin 0 auto
  overflow-x auto
  padding unit * 2
  text-align left
  max-height 70vh
  font-size 1.1rem
  line-height 1.7em

  > p
    font-size 1.1rem
    line-height 1.7em

    &:first-child
      margin-top 0

    &:last-child
      margin-bottom 0

  > ul
    ul: 'square'

.block-date
  p()
  font-style italic
  font-size 0.8rem
  padding-right (unit * 2)
  text-align right
  > a
    font-weight bold

.block-arrow
  position absolute
  top 0
  cursor pointer
  height 100vh
  width 20vw
  opacity 0

  &:hover
    opacity 1

.block-arrow--right
  right 0

.tab--container--block
  position absolute
  top 100%
  width 100%
  margin-top -50px

  .tab--container__nav
    border-bottom 1px solid bordergray

  .tab--container__nav__item
    padding 0 unit

  .tab-content
    width 60%
    margin unit auto

.block-new-comment-container
  margin-top unit * 2
