case status
  when 'active'
    a.js-copy-url
      | Copy link

    a.js-share-external(
      data-service='Twitter'
      href="https://twitter.com/intent/tweet?original_referer=#{url}&text=#{text}&url=#{url}&via=aredotna"
      target='_blank'
    ) Twitter

    a.js-share-external(
      data-service='Facebook'
      href="https://www.facebook.com/sharer/sharer.php?u=#{url}"
      target='_blank'
    ) Facebook

  default
    a.js-toggle
      | Share
