meta( name='twitter:title', content="Are.na / #{block.get('title')}" )
meta( name='twitter:url', content="https://www.are.na/block/#{block.id}" )
meta( property='og:title' content="Are.na / #{block.get('title')}" )
meta( property='og:url' content="https://www.are.na/block/#{block.id}" )

if block.has('image')
  meta( name="twitter:card", content="summary_large_image" )
  meta( name='twitter:image1', content= block.get('image').display.url )
  meta( property='og:image' content= block.get('image').display.url )

- description = (block.has('description') && block.get('description').replace(/(?:\r\n|\r|\n)/g, ' ')) || "Are.na is a social platform for creative and collaborative research."
meta(name="twitter:description", content=description)
meta(property="og:description" content=description)

unless canIndex
  meta(name="robots" content="none")
