extends ../../../components/layout/index--bare

block vars
  - extraClasses = 'no-header no-messages'

block body
  #save-page
    .auth-logo
      include ../../../public/images/arena-mark.svg

    form
      - text = isURL ? 'URL' : 'text'
      label.save-label Save #{text}
      if isURL
        input.input--wide.input--relative.is-block(
          name='url' type='text' placeholder='URL' value="#{content}"
        )
      else
        input.input--wide.input--relative.is-block(
          name='text' type='text' placeholder='Text' value="#{content}"
        )
      label.save-label to

      #save--connect
        //- rendered on the client

block scripts
  script( src=sd.ASSET_PATH + 'save' + sd.JS_EXT )