a.premium-badge
  antialiased()
  display inline-block
  letter-spacing 0px
  font-size 13px
  color success
  position absolute
  margin-left s_margin

  > div
    position absolute
    transition opacity 0.2s

  .premium-badge__stars
    opacity 1

  .premium-badge__cracker
    opacity 0

    & > svg
      vertical-align middle

  &:hover
    .premium-badge__stars
      opacity 0

    .premium-badge__cracker
      opacity 1

.path.stuck a.premium-badge:hover
  .premium-badge__stars
    opacity 1
  .premium-badge__cracker
    opacity 0