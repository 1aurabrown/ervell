extends ../../../../components/meta_pocket/templates/meta_pocket

block vars
  - title = "Sort"
  - extraClasses = 'js-profile-sort'
  - id = "metadata--sort"

block content
  ul.breadcrumb
    li
      a(
        href="#{sd.CURRENT_PATH}"
        class= !sd.SORT || sd.SORT == "updated_at" ? "is-active" : ""
        data-sort="updated_at"
      ).js-sort-option.metadata--selector__option Recently updated
    li
      a(
        href="#{sd.CURRENT_PATH}?sort=random"
        class=sd.SORT == 'random' ? "is-active" : ""
        data-sort="random"
      ).js-sort-option.metadata--selector__option Random

