.OnboardingWelcome
  display flex
  flex-direction column
  justify-content center
  align-items center
  min-height 100vh
  padding 1em
  opacity 0
  transition opacity 300ms

  &__subheadline
    max-width 1024px
    text-align center

  &__cta
    display flex
    width 100%
    flex-direction row
    justify-content center
    align-items center
    // Match font size to button size
    // for consistent em value
    font-size font-size-lg
    margin-top 2em

    &__skip
      position absolute
      top 0
      right 0
      padding unit unit 40px 40px
      cursor pointer
      opacity 0.45
      z-index rotate_z + 1
      prevent-content-shift()
      transform translateZ(100)
      .iconic-sm:before
        font-weight 400
        font-size 16px !important

    > .Button
      display block
      margin 0 1em
      max-width block_width
      flex-basis 50%

  &--active
    opacity 1
