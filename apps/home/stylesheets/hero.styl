.HomeHero
  &__focus
    position relative
    padding 0 2em
    font-size font-size-h2
    margin 2em auto

  &__demo-block
    display flex
    justify-content flex-start
    width block_width

    > .Block
      margin 0 auto

      // Hide default overlay buttons (Source / Connect)
      .Block__inner__overlay
        display none
      // Enable border
      .Block__inner
        border-color colors-gray-border
      // Hide title & timestamp, display attribution
      .Block__caption__meta
        display block
      .Block__caption__title
      .Block__caption__meta__timestamp
        display none
      // Relative caption
      .Block__caption
        position relative

    // Enabled when hovering faux 'Connect' button
    &--hover
      opacity 0.5

  &__connect
    position absolute
    top (block_width / 2)
    left 50%
    transform translate(-50%, -50%)

  &__video
    width 60%
    position relative
    +tablet()
      width 90%
    +mobile()
      width 90%
    > span
      border 1px solid colors-gray-border
      display block
      ratio-box(960 / 540)
      > iframe
        position absolute
        top 0
        left 0
        width 100%
        height 100%
