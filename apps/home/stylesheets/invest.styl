mobile_breakpoint = 1024px

.HomeInvest
  background colors-state-invest

  .Type, .Button
    color white

  .Button
    border-color darken(colors-state-invest, 30)

  &__content
    display flex
    width 100%
    flex-direction row
    justify-content center
    align-items flex-start
    flex 1
    padding 2em 1em
  
  &__left
    width 25%
    margin-right 2em
    flex-direction column
    align-items flex-start

  &__right
    width 60%
    padding 0.5em 1em
    flex-direction column
    align-items flex-start

+below(mobile_breakpoint)
  .HomeInvest
    &__content
      flex-direction column
      padding 1em 1em 2em
    &__left
      padding 1em
      margin-right 0
      width 100%
    &__right
      width 100%
    br
      margin-bottom 1em
