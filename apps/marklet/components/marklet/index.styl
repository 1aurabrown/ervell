.Marklet
  width 100%
  height 100vh
  font-size font-size-root
  border connect-outer-border-size solid colors-gray-border

  &__border
    position relative
    display flex
    flex-direction column
    justify-content space-between
    width 100%
    height 100%
    background-color white
    border 1px solid colors-gray-lighter

  &__url
    position relative
    margin 2em auto

    > input
      &
      &:hover
      &:focus
        color colors-gray-light
        background-color transparent

    &:after
      display block
      content ''
      position absolute
      top 0
      right 0
      bottom 0
      width 4em
      background-image linear-gradient(to left, white, rgba(white, 0))
      pointer-events none

  &__drop
    display flex
    align-items center
    justify-content center
    text-align center
    margin 0.5em
    height block_width
    border 2px dashed colors-gray-border
    background-color colors-gray-background

    > span
    > textarea
      font-size font-size-lg
      line-height line-height-base
      color colors-gray-light

    > span
      padding 2em

    > textarea
      width 100%
      height 100%
      padding 0.5em
      color colors-gray-text

    > img
      max-width 100%
      max-height 100%

  &__body
    padding 0.5em

    .Connect
      &[data-state='active']
        border none

      &__search
        &
        &:focus
          border none

      &__header
        margin 0 0 0 0

      &__results
        border none

  &__button
    width auto
    margin 1em 0 0 0
    padding 0 0.5em
    background-color white
