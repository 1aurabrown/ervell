@import '../components/layout/variables'

.static__mark
  position absolute
  width 28px
  margin 7px 0 0 -42px
  opacity 0.90
  z-index 199
  
  &:hover 
  	opacity 0.70
  
.static__left-column
	position relative
	float left
	top 108px
	left 0
	width auto

.static__menu
  position relative
  float right
  top 110px
  right 0
  width 150px
  text-align left
  padding 0
  z-index 199

.static__menu--dark
	color hovergray
	
	&:hover
		color textgray

.static__menu--light
	color lightgray
	
	&:hover
		color hovergray

.static--title
	position relative
	float left
	width 100%
	color hovergray
	margin 0 0 24px 0

.static--text
	max-width 740px
	font-size 24px
	line-height 1.3em
	margin-bottom 130px
	
	a
		font-weight bold
		
		&:hover
			color hovergray

.static__tools__frame
	position relative
	float left
	width 100%
	border 2px solid bordergray
	padding 12px
	margin 0 0 130px 0

.static__tools__frame--premium
	border 2px solid public	

#layout-header
	background none
	
	.right
		position absolute
		right 0

	.layout-header__search
		display none
	
.new-channel-btn
	display none
	
.layout-header__register
	display none

body 
	background-color backgroundgray
	
