@import '../components/layout/variables'

.static__mark
  position relative
  float left
  width 28px
  margin 115px 10px 0 0
  opacity 0.90
  z-index 199
  
  &:hover 
  	opacity 0.70
  
.static__left-column
	position relative
	float left
	max-width 750px
	margin 0

.static__menu
  position relative
  float right
  margin 110px 0 0 0
  right 0
  width 130px
  text-align left
  z-index 199

.static__menu--dark
	color hovergray
	
	&:hover
		color textgray

.static__menu--light
	color lightgray
	
	&:hover
		color hovergray

.static--title
	position relative
	float left
	width 100%
	font-weight bold
	color hovergray
	margin 0 0 24px 0

.static--text
	position relative
	float left
	width 100%
	max-width 700px
	font-weight normal
	line-height 1.3em
	padding 108px 0 20px 0
	margin 0
	
	a
		font-weight bold
		
		&:hover
			color hovergray

.static__tools__frame
	position relative
	float left
	width 100%
	border 2px solid bordergray
	padding 12px
	font-weight normal
	margin 0 0 130px 0

.static__tools__frame--premium
	border 2px solid public	

#layout-header
	background none
	
	.right
		position absolute
		right 0

	.layout-header__search
		display none
	
.new-channel-btn
	display none
	
.layout-header__register
	display none

body 
	background-color backgroundgray
	
@media (max-width:(block_width_mar * 3) + 30)
	body, html
		font-size 13px

  .static__mark
    margin 40px 0 0 0

  .static__left-column 
    clear both
    max-width 500px
   
  .static--title
  	margin 0 0 4px 0
  	
  .static--text
  	padding 20px 0 80px 0
  
  .static__menu
    display none
    
  .static__tools__frame
  	margin 0 0 80px 0
	
