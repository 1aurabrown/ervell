@require '../../../node_modules/rupture/rupture'
@require 'labs'
@require 'graph'
@require 'pricing'
@require 'features'

rupture.mobile-cutoff = 500px

.home--about
  margin-top unit * 10

.about-section
  max-width 600px
  margin (unit * 6) auto 0
  font-size 20px
  line-height 1.5
  overflow hidden
  img
    max-width 100%
    margin (unit * 2) auto
    display block
  img:not(.no-border)
    border 1px solid bordergray
  &:last-of-type
    margin-bottom (unit * 10)
  a
    font-weight bold
  p
    p()
    font-size 20px
    margin-bottom unit
  +below(900px)
    padding (unit)
