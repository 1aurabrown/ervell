@import '../components/layout/variables'

.static__mark
  position relative
  float left
  width 28px
  margin 115px 10px 0 0
  opacity 0.90
  z-index 199
  
  &:hover 
  	opacity 0.70
  
.static__left-column
	position relative
	float left
	max-width 750px
	margin 0

.static__menu
  position relative
  float right
  margin 110px 0 0 0
  right 0
  width 130px
  text-align left
  z-index 199

.static__menu--dark
	color hovergray
	
	&:hover
		color textgray

.static__menu--light
	color lightgray
	
	&:hover
		color hovergray

.static--title, .static--title--top
	position relative
	float left
	width 100%
	text-align center
	color hovergray
	margin 0 0 24px 0

.static--title--top
	text-align left
	font-weight bold
	
.static--text
	position relative
	float left
	width 100%
	max-width 700px
	font-weight normal
	line-height 1.3em
	padding 108px 0 20px 0
	margin 0
	
	a
		font-weight bold
		
		&:hover
			color hovergray

.static__tools__frame
	position relative
	float left
	width 100%
	border 2px solid bordergray
	padding 30px 20px 30px 20px
	font-size 1em
	line-height 1.5em
	font-weight normal
	margin 0 0 110px 0
	
	input
		background-color bordergray
	
	.input--relative
		margin 10px 0 10px 0
		
		&:focus
			background-color secondbackgroundgray
	
	button
		margin 10px 0 0 0
	
.static__tools__frame--supporter
	text-align left
	border 2px solid public
	
	span
		// background-color #D0F097
	
.static__tools__frame--premium
	opacity 0.5
	
.static--highlight
	width 100%
	height 60px
	line-height 54px
	text-align center
	margin 10px 0 10px 0
	border 2px solid bordergray

.static__tools__bookmarklet-button, .static__tools__social-button
	width 100%
	height 50px
	line-height 50px
	font-weight bold
	text-align center
	background-color bordergray
	border 1px dashed lightgray
	margin 12px 0 12px 0
	
	&:hover
		opacity 0.6
		cursor pointer
		
.static__tools__social-button
	border 1px solid lightgray
	
#layout-header
	background none
	
	.right
		position absolute
		right 0

	.layout-header__search
		display none
	
.new-channel-btn
	display none
	
.layout-header__register
	display none

body 
	background-color backgroundgray
	
@media (max-width:(block_width_mar * 3) + 30)
	body, html
		font-size 13px

  .static__mark
    margin 40px 0 0 0

  .static__left-column 
    clear both
    max-width 500px
   
  .static--title
  	margin 0 0 4px 0
  	
  .static--text
  	padding 20px 0 80px 0
  
  .static__menu
    display none
    
  .static__tools__frame
  	margin 0 0 80px 0
	