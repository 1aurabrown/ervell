@import '../components/layout/variables'

.static__left-column
	position fixed
	left 50%
	float left
	width 300px
	margin 120px 0 0 -550px
	font-size 1.8em
	line-height	1.4

.static__title
	position relative
	float left
	width 115px

.static__menu
	position relative
	float left
	width 150px
	color lightgray

	a.active
		color textgray

.static__right-column
	position absolute
	float left
	width 600px
	left 50%
	margin 120px 0 0 -250px

.static--text
	line-height 1.5
	padding 5px 0 70px 0

	h1
		border-bottom 1px solid lightgray
		padding 0
		margin 0 0 10px 0

.static__tools__frame
	border 1px solid lightgray
	padding 10px
	margin 0 0 50px 0

.static__tools__frame--premium
	border 1px solid public
	
