@import '../components/avatar/stylesheets/avatar'

.static__mark
  position relative
  float left
  width 28px
  margin 115px 0 0 0
  opacity 0.90
  z-index 199

.static__left-column
  position relative
  margin 0 auto 700px auto

.static__menu
  position fixed
  margin 160px 170px 0 0
  right 0
  top 5px
  width 130px
  text-align left
  z-index modal_z

.static__menu__item
  color lightgray

  &:hover, &.is-active
    color hovergray

.static--title, .static--title--top
  position relative
  float left
  width 100%
  text-align center
  color hovergray
  margin 0 0 24px 0

.static--title--top
  text-align left
  font-weight bold

.static--text
  position relative
  width 100%
  max-width 700px
  font-weight normal
  line-height 1.3em
  padding 108px 0 0 0
  margin-left 38px
  font-size 1.5em

  p
    margin 1.3em 0

  .static--half-p
    margin-top 10px

  .static--no-p
    margin 0

  a
    font-weight bold

    &:hover
      color hovergray

.static__img
  width 98%
  -moz-box-shadow 0px 0px 15px 0px bordergrayp
  -webkit-box-shadow 0px 0px 15px 0px bordergray
  box-shadow 0px 0px 15px 0px bordergray

.static--small-text
  font-size 1em

.static__tools__frame
  position relative
  float left
  width 100%
  border 2px solid bordergray
  padding 30px 20px 30px 20px
  font-size 1em
  line-height 1.5em
  font-weight normal
  margin 0 0 110px 0

  input
    background-color bordergray
    margin 5px 0 10px 0

  button
    margin 20px 0 0 0

  .static__tools__checkbox
    position relative
    float left
    width 100%
    color public
    line-height 1.8em

    .small
      font-size s_caption + 1
      color textgray
      margin 0 0 15px 25px
      line-height 14px

  .transparent
    opacity 0.4

.static__tools__frame--supporter
  text-align left

  input
    margin 0 10px 0 0

.static--highlight
  width 100%
  height 60px
  line-height 54px
  text-align center
  margin 10px 0 10px 0
  border 2px solid bordergray

.static__graph
  width 98%
  height 18px
  margin 120px 0 150px 0
  border 0px solid lightgray
  background-color white

  .static__graph-fill
    position realtive
    float left
    height 100%

  .step-1
    background-color #6AD065
    width 1%

    .static__graph-mark
      margin-top -36px

      .mark-label
        margin-top -40px

  .step-2
    background-color #E5E5E5
    width 5%

  .step-3
    background-color #B6B6B6
    width 30%

  .step-4
    background-color #B6B6B6
    width 64%

    .mark-label
      float right
      text-align right
      margin 16px 6px 0 0

.static__graph-mark
  position relative
  float right
  width 1px
  background-color #C2C2C2
  margin 22px 0 0 0
  height 30px

.mark-label
  position relative
  float left
  font-size s_caption + 3
  line-height 18px
  margin 16px 0 0 6px
  color textgray
  width 100px

.static__tools__bookmarklet-button, .static__tools__social-button
  display block
  width 100%
  height 50px
  line-height 50px
  font-weight bold
  text-align center
  background-color bordergray
  border 1px dashed lightgray
  margin 12px 0 12px 0

  &:hover
    opacity 0.6
    cursor pointer

.static__tools__social-button
  border 1px solid lightgray

#layout-header
  display none

  .right
    position absolute
    right 0

  .layout-header__search
    display none

.new-channel-btn
  display none

.layout-header__register
  display none

body
  background-color backgroundgray

@media (max-width:(block_width_mar * 4) + 20)
  .static__menu
    margin 160px 70px 0 0
    width 100px

@media (max-width:(block_width_mar * 3) + 20)
  body, html
    font-size 13px

  .static__mark
    margin 43px 0 0 4px

  .static__left-column
    clear both

  .static--title
    margin 0 0 4px 0

  .static--text
    padding-top 40px
    width 100%
    max-width 500px

  .static__tools__frame
    margin 0 0 80px 0
    
  .static__menu 
    margin 85px 0 0 0

@media (max-width:(block_width_mar * 2) + 20)
  .static__menu
    display none
