extends ../../../components/layout/index

block styles
	link( type='text/css', rel='stylesheet', href=(sd.ASSET_PATH + 'about' + sd.CSS_EXT) )

block body
	.static__left-column.flex-container
		img.static__mark(src="../images/arena-mark.svg", alt="Arena")
		.static__tools.static--text.static--small-text
			h2.static--title--top Tools

			h2#bookmarklet.static--title Bookmarklet
			h2.static__tools__frame
				a(href="javascript:(function(){var s=document.createElement('script');s.setAttribute('type','text/javascript');s.setAttribute('charset','UTF-8');s.setAttribute('src','https://marklet.are.na/loader.js');document.documentElement.appendChild(s);})()").static__tools__bookmarklet-button Add to Are.na
				| Drag the above bar to your toolbar &#10548;
				br
				br
				| With the bookmarklet, you can easily add images, videos, links, and text to your Arena channels while surfing the web.

			h2#extra-tools.static--title Premium
			h2.static__tools__frame.static__tools__frame--supporter
				strong Manage channels
				br
				| Dashboard to browse, sort, edit and manage your channels.
				img.static__img(src="../images/arena-screenshot-manage.jpg", alt="Arena")
				br
				br
				strong Quick search
				br
				| Search for blocks inside a channel.
				img.static__img(src="../images/arena-screenshot-quicksearch.jpg", alt="Arena")
				br
				br
				button.button--wide.button--border.button--add $45 / year - Activate premium &rarr;
				br
				br
				br
				| More tools will be added to the premium package soon. You can also make an annual donation to help our #[a(href="/about#principles") self-sustainablity] goals, you'll get access to our behind the scenes work and other perks.
				br
				input.input--wide.input--relative.is-block(name='email', type='email', placeholder='Enter 10 or more', required, autofocus= autofocus)
				| $
				button.button--add Donate &rarr;
			h2#invite.static--title Invite someone
			h2.static__tools__frame
				| Add an email address to collaborate with someone:
				br
				input.input--wide.input--relative.is-block(name='email', type='email', placeholder='Email', required, autofocus= autofocus)
				br
				br
				br
				br
				| You can attach channels worth of notice below:
				input.input--wide.input--relative.is-block(name='email', type='email', placeholder='Suggested channel names, comma separated', required, autofocus= autofocus)
				button.button--wide.button--border.button--add Send invitation &rarr;

			h2#find-friends.static--title Find Friends
			h2.static__tools__frame
				|	Connect to Facebook or Twitter to follow or collaborate with friends.
				.static__tools__social-button Find Facebook contacts &rarr;
				.static__tools__social-button Find Twitter contacts &rarr;

			h2#add-via-email.static--title Add via email
			h2.static__tools__frame
				strong post+subo918@are.na
				br
				br
				| Sending an e-mail to this address will post the contents (including attachments) to an automatically generated private channel called “Add via Email.” You can send emails to specific channels by writing a channel title in the subject line.
				br
				br
				strong Note:
				| anyone possessing your personal "Add via E-mail" address can post to your account.

	h3.static__menu
		ul
			li: a(href="/").static__menu__item Home
			li: a(href="/").static__menu__item Profile
			li: a(href="/tools").static__menu__item About
			if !user
				li: a(href="#log_in").static__menu__item Login
				li: a(href="#sign_up").static__menu__item Register

block scripts
	script( src=sd.ASSET_PATH + 'about' + sd.JS_EXT )
