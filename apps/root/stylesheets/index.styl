.body--home
  #layout-header
    position absolute
    background transparent
    color hovergray

    .logo
      opacity 0.9
      svg
        fill hovergray
    
    .header--icon
      &:hover
        cursor default

    .layout-header__register
      padding 0 12px 0 20px

    .btn-signup
      display none

    .layout-header__or
      display none

    .layout-header__login
      color textgray

      &:hover
        color hovergray

  .container
    background-color backgroundgray

.home__section--intro
  width 100%
  height 100%
  padding 0 10px
  background-color transparent
  padding 7em 6em 10em 6em
  color hovergray
  text-align center

  h1
    font-size 2.2em
    font-weight normal

  h2:nth-of-type(1)
    margin-top 2em

  .intro__button
    width 110px
    display inline-block
    text-align center
    border-bottom 1px solid textgray
    padding 0 0 16px 0
    margin 50px 25px 0 25px

    a
      color textgray
      font-size 1.2em
      font-weight bold
      padding-bottom 12px

    &:hover
      cursor pointer
      border-bottom 1px solid hovergray
      a
        color hovergray

.home__section--intro__mark
  margin 2em 0 4em 0

.home__section--footer
  position relative
  float left
  width 100%
  color hovergray
  background-color #fff
  border-top 1px solid bordergray
  padding 60px 0 60px 0

  h2
    width 100%
    text-align center
    position relative
    float left
    font-weight normal

  a
    font-weight bold
    color hovergray
    border-bottom 2px solid hovergray
    padding 0 0 1px 0

    &:hover
      color textgray
      border-bottom 2px solid textgray

.home__section-intro__text
  margin 50px 0 90px 0
  line-height 1.4em
  text-align center
  color hovergray

.home__section--channels
  position relative
  float left
  width 100%
  background-color none
  padding 3em 0 70px 0
  border-top 1px solid bordergray

  h2
    color hovergray
    padding 0 0 0 10px

.home__section--channels__channels
  position relative
  float left
  width 100%
  margin 0
  padding 0

  .home__path
    position relative
    float left
    width 100%
    color textgray
    padding 0 30px 10px 10px
    margin 0

    li:last-child
      font-weight normal

    .breadcrumb
      position relative
      float left

privacy-color('.privacy--', color)

.home__section-channels__channels .home__path--closed:hover,
.home__section-channels__channels .home__path--public:hover
  color hovergray

.home__section-channels__images
  position relative
  float left
  width 100%
  padding 0

.home__section-channels__button
  position relative
  float left
  width 100%
  margin 0 0 40px 0
  text-align center

  .button--inblock
    position relative
    left 0
    width 200px
    margin auto
    color lightgray
    border-top 1px solid bordergray

    &:hover
      color hovergray
      border-top 1px solid textgray

@media (max-width:(block_width_mar * 4) + 19)

  .home__section--channels__channels
    .grid
      -webkit-justify-content center
      justify-content center

      .grid__block
        max-width 220px
        min-width 220px

      .grid__block__inner
        height 220px

      .grid__block__content__image
        max-width 220px
        max-height 220px

@media (max-width:(block_width_mar * 3) + 16)
  html, body
    font-size 13px

  .home__section--channels
    padding 20px 0 20px

    h2
      padding 0

  .home__section--channels__channels
    padding 0

    .home__path
      padding 0
      margin-bottom 20px

    .grid
      .grid__block
        max-width 300px
        min-width 300px

      .grid__block__inner
        height 300px

      .grid__block__content__image
        max-width 300px
        max-height 300px

  .home__section-footer
    margin 0 0 40px 0

@media (max-width:(block_width_mar * 2) + 20)
  .home__section--channels
    padding 20px 10px 20px 10px

@media (max-width:500px)
  .home__section--intro
    padding 4em 0

    .intro__button
      width 110px
      display inline-block
      text-align center
      border-bottom 1px solid textgray
      padding 0 0 16px 0
      margin 50px 5px 0 5px

    h1
      font-size 1.5em
      font-weight 100

  .home__section--channels
    padding 20px 0 70px 0
