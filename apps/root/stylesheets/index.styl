@import '../components/layout/variables'

.path
  display none

#layout-header
  display none

.home--gray-background
  position absolute
  left 0
  top 0
  width 100%
  height 540px
  background-color backgroundgray
  
.section-1, .section-2
  position relative
  float left
  width 100%
  min-height 540px
  background-color none
  padding 2em 0 2em 0

.section-1
  color hovergray
  top 0
  padding 6.8em 0 6.8em 0

.home__mark
  position absolute
  width 28px
  margin 7px 0 0 -42px
  opacity 0.90
  z-index 199

.home__menu
  position relative
  float right
  top 0
  right 0
  color textgray
  text-align left
  padding 0 1.5em 0 0
  z-index 199

.intro
  position relative
  float left
  top 0
  max-width 740px
  margin 0

.intro--register
  border-bottom 2px solid #111
  padding 0 0 4px 0
  
  &:hover
    color public
    border-bottom 2px solid public

.section-2
  color lightgray
  
  a 
    color textgray
  
    &:hover
      color hovergray

.section-2__channels
  position relative
  float left
  width 100%
  margin 0
  
  h3 a
    color hovergray
    padding 10px 0 10px 0

.section-2__images
  position relative
  float left
  width 100%
  overflow hidden
  text-align center

  img 
    position relative
    float left
    height 300px
    width 300px
    overflow hidden
    margin 5px 30px 80px 0

.section-2__activity
  position relative
  float left
  width 300px
  margin 0 30px 0 0
  
  a
    color textgray
    
    &:hover
      color hovergray




