html, body
  min-height 100% !important
  height 100%
  margin 0
  padding 0

/* HOME */

.body--home
  .container
    position absolute
    height 100%

svg.iconic.iconic-sm
  max-width 16px

svg.iconic.iconic-md
  max-width 32px

.home__section--intro
  width 100%
  height 100%
  background-color #fff
  color hovergray
  text-align center
  display table
  padding 0

  .home__section--intro__diagram svg
    height 350px
    max-width 100%

    +below(800px)
      height 250px

    +below(400px)
      height 165px

  .feynman
    width 480px
    opacity 0.9

  .home-arrow
    position absolute
    bottom unit
    left calc(50% - 8px)
    -webkit-transform rotate(-90deg)
    -moz-transform rotate(-90deg)
    -o-transform rotate(-90deg)
    -ms-transform rotate(-90deg)
    transform rotate(-90deg)
    fill #A6A6A6
    z-index 1

    &:hover
      fill hovergray

  .home__section--intro__inner
    position relative
    display table-cell
    width 100%
    height 100%
    vertical-align middle

  h1
    font-size 2.1em
    font-weight normal
    color hovergray
    max-width 58%
    margin 0 auto
    antialiased()

    +below(800px)
      font-size 1.3rem

  h2:nth-of-type(1)
    margin-top 2em

h1.home--wide-header
  max-width 100%
  width auto
  margin 4em 0

.home__team-advisors > h1
  display inline-block

.home__section--intro--examples .home__section--intro__inner
  display table-cell
  width 100%
  min-height 100%
  height auto
  vertical-align middle
  padding-top 10%

.home__section--intro__inner__buttons
  margin-top 4em

  .intro__button
    width 180px
    height 50px
    display inline-block
    text-align center
    border 1px solid hovergray
    padding 0
    margin 0 15px
    color hovergray
    font-size 1.2em
    font-weight bold
    line-height 47px
    cursor pointer
    antialiased()

    &:hover
      border 1px solid success
      color success

.home__section--intro__figure
  margin-top 4em

h1.home__section--intro__inner__copy
  color lightgray

.home__section--footer
  width 100%
  background-color backgroundgray
  border-top 1px solid bordergray
  padding 60px 0 60px 0

  h1
    font-size 2.1em
    font-weight normal
    text-align center
    color hovergray
    antialiased()

  a
    font-weight bold
    color hovergray

    &:hover
      color textgray

@media (max-width:(block_width_mar * 4) + 19)
  html, body
    font-size 13px

@media (max-width:(block_width_mar * 3) + 16)
  .home__section--intro
    .intro__button
      width 100px
      height 40px
      line-height 38px
      margin 0 10px

    h1
      font-size 1.8em

@media (max-width:500px)
  .home__section--intro
    padding 0 15px 0 15px

    h1
      font-size 1.2em
      font-weight 100

  .home__section--intro__inner__buttons
    margin-top 2em

    .intro__button
      width 70px
      font-size 0.9em
      font-weight normal
      padding 0

