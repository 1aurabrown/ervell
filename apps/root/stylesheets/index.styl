@import '../components/layout/variables'
@import '../../node_modules/jeet/stylus/jeet'

body
  padding 0px

.path
  display none

.home__path--public
  color public
  font-weight normal

.home__path--closed
  color closed
  font-weight normal

#layout-header
  display none

.home__section
  clearfix()
  width 100%
  height auto
  padding 0 10px
  background-color backgroundgray

.home__section--footer
  background-color bordergray
  
.home__section--stats
  position relative
  float left
  width 100%
  padding 40px 0 40px 0
  background-color #fff
  border-top 1px solid #e7e7e7

.home__section--channels
  background-color #fff

.home__mark, .home__mark--footer
  position relative
  float left
  height auto
  width 28px
  margin 115px 10px 0 0
  opacity 0.90
  z-index 199

.home__mark--footer
  margin 16px 10px 0 0

.home__section-intro__text
  position relative
  float left
  max-width 680px
  line-height 1.4em
  padding 108px 0 70px 0
  margin 0
  color hovergray

  a
    border-bottom 2px solid hovergray
    padding 0 0 1px 0

    &:hover
      color textgray
      border-bottom 2px solid textgray

a.home__section-intro__menu, a.home__section-intro__menu--mobile
  position relative
  float left
  clear both
  border-bottom 2px solid hovergray
  padding 0 0 1px 0
  margin 0

  &:hover
    color public
    border-bottom 2px solid public

a.home__section-intro__menu--mobile
  display none

  &:hover
    color public
    border-bottom 2px solid public

.static__menu, .static__menu--footer
  position relative
  float right
  margin 110px 0 0 0
  right 0
  width 130px
  text-align left
  z-index 199

.static__menu--dark
  color hovergray

  &:hover
    color textgray

.static__menu--light
  color lightgray

  &:hover
    color hovergray

.home__section--stats__column
  position relative
  float left
  width 33%
  text-align center

  h1
    font-size 4.8em
    font-weight normal
    color lightgray
    margin 0

  h2
    font-weight normal
    color lightgray
    margin 0

.home__section--channels
  position relative
  float left
  background-color none
  padding 40px 0 70px 0

  h2
    color hovergray
    padding 0 0 0 10px

.home__section--channels__channels
  position relative
  float left
  width 100%
  margin 0
  padding 0

  h2
    position relative
    float left
    color lightgray
    padding 20px 0 10px 10px
    margin 0

.home__section-channels__channels a:hover .home__path--closed,
.home__section-channels__channels a:hover .home__path--public
  color hovergray

.home__section-channels__images
  position relative
  float left
  width 100%
  padding 0

.home__section-channels__button
  position relative
  float left
  width 100%
  margin 0 0 40px 0
  text-align center

  .button--inblock
    position relative
    left 0
    width 200px
    margin auto
    color lightgray
    border-top 1px solid bordergray

    &:hover
      color hovergray
      border-top 1px solid textgray

.home__section--footer
  position relative
  float left
  width 100%
  color hovergray
  padding 40px 10px

  h2
    position relative
    float left
    max-width 720px

  a
    color hovergray
    border-bottom 2px solid hovergray
    padding 0 0 1px 0

    &:hover
      color textgray
      border-bottom 2px solid textgray
      
for i in (1..5)
  @media (min-width:(block_width_mar * i) + 20)
    .home__section__container
      center(block_width_mar * i)

@media (max-width:(block_width_mar * 4) + 19)
  .home__section--channels__channels 
    .grid
      -webkit-justify-content center
      justify-content center
      
      .grid__block
        max-width 220px
        min-width 220px
    
      .grid__block__inner
        height 220px
        
      .grid__block__content__image
        max-width 220px
        max-height 220px

@media (max-width:(block_width_mar * 3) + 16)
  html, body
    font-size 13px
  
  .home__section__container
    center(94%)

  .home__mark
    margin 40px 0 0 0

  .home__section-intro__text
    clear both
    padding 20px 0 40px 0

  a.home__section-intro__menu--mobile
    display inline

  .static__menu
    display none

  .home__section--stats
    padding 80px 0 80px 0

  .home__section--stats__column
    width 50%
    h1
      font-size 4em
    h2
      font-size 1.5em

  .home__section-stats__column--connections
    display none

  .home__section--channels
    padding 20px 0 20px 
    
    h2
      padding 0
  
  .home__section--channels__channels
    padding 0

    h2
      padding 0
      margin-bottom 20px
  
    .grid
      .grid__block
        max-width 300px
        min-width 300px
    
      .grid__block__inner
        height 300px
        
      .grid__block__content__image
        max-width 300px
        max-height 300px

  .home__section-footer
    margin 0 0 40px 0

@media (max-width:(block_width_mar * 2) + 20)
  .home__section--channels
    padding 20px 10px 20px 10px
    
  .home__section--stats
    display none

@media (max-width:500px)
  .home__section--channels__channels
    .grid
      .grid__block
        max-width 280px
        min-width 280px
    
      .grid__block__inner
        height 280px
        
      .grid__block__content__image
        max-width 280px
        max-height 280px
