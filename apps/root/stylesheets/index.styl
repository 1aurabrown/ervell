@import '../components/layout/variables'

.container
  position absolute
  top 0
  left 0
  width 100%
  max-width 100%
  padding 0 0 0 0

.path
  display none

#layout-header
  display none

.section-1, .section-2, .section-3, .section-4
  position relative
  float left
  width: 100%
  min-height 600px
  font-size 24px
  font-weight bold
  line-height 32px
  background-color white
  padding 2em 2.2em 2.8em 5em

.section-1
  background-color backgroundgray
  color #111
  font-weight bold
  padding-top 4.2em

.section-2
  background-color #fff

.section-2__links
  position relative
  float left
  width 100%
  margin 0 0 0 0

.section-2__images
  position relative
  float left
  width 100%
  overflow hidden
  text-align center

  img 
    position relative
    float left
    height 300px
    width 300px
    overflow hidden
    margin 5px 30px 80px 0

.section-2__activity
  position relative
  float left
  width 300px
  line-height: 25px;
  margin 0 30px 0 0

.section-3
  background-color #F5F5F5
  text-align left

  img
    width 45px
    opacity 0.75
    margin 0 1% 0 1%

  .section-3__block
    position relative
    float left
    width 20%
    margin 0 4% 0 0

  .section-3__description
    position relative
    clear both
    text-align left

.section-4
  background-color #E5E5E5

.home-logo
  display inline-block
  width 140px
  opacity 0.75

.home-mark
  position absolute
  top 108px
  left 70px
  display inline-block
  width 30px
  margin 0 0 0 0
  opacity 0.90
  z-index 199

.home--small
  font-size 16px
  line-height 10px

.login
  position absolute
  top 45px
  right 40px
  color textgray
  text-align right
  line-height 26px
  padding 2.5em 3em 0 0
  z-index 199

.register
  border-bottom 2px solid #111
  padding 0 0 4px 0
  
  &:hover
    color public
    border-bottom 2px solid public

.introduction
  max-width 740px

// FREAK HACK IFRAME

.freak-hack-div
  overflow hidden
  height: 1000px
  margin 30px 0 0 0
  border 1px solid textgray

.freak-hack
  width 100%
  height 1200px
  margin -50px 0 0 0
  



