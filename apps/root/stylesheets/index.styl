html, body
  min-height 100% !important
  height 100%
  margin 0
  padding 0

.body--home
  #layout-header
    position absolute
    background transparent
    color #fff

    .logo
      opacity 0.9
      svg
        fill hovergray
        
    .header--icon
      &:hover
        cursor default

    .layout-header__register
      padding 0 12px 0 20px

    .btn-signup
      display none

    .layout-header__or
      display none

    .layout-header__login
      color #A6A6A6

  .container
    position absolute
    height 100%

.home__section--intro
  width 100%
  height 100%
  background-color backgroundgray
  color hovergray
  text-align center
  display table
  padding 0
  
  .home__section--intro-bk
    display none
    position absolute
    width 100%
    height 100%
    left 0
    top 0
    background-image url('../images/arena-background.jpg')
    background-repeat no-repeat
    background-size 100% auto
    opacity 0.55
    margin-top -30px
    
  .feynman
    width 480px
    opacity 0.9
    margin -60px 0 0px 0
  
  .home-arrow
    position absolute
    top 94%
    -webkit-transform: rotate(-90deg);
    -moz-transform: rotate(-90deg);
    -o-transform: rotate(-90deg);
    -ms-transform: rotate(-90deg);
    transform: rotate(-90deg);
    fill #A6A6A6

  .home__section--intro__inner
    position relative
    display table-cell
    width 100%
    height 100%
    vertical-align middle
  
    .home__section--intro__inner__copy
      color #A6A6A6
      
      .home__section--intro-bullets-1, .home__section--intro-bullets-2
        position relative
        float left
        width 40%
        font-size 1em
        line-height 1.7em
        text-align left
        margin 0 0 0 15%
      
      .home__section--intro-bullets-2
        margin 0 5% 0 0
    
  h1
    font-size 2.1em
    font-weight normal
    color hovergray
    antialiased()

  h2:nth-of-type(1)
    margin-top 2em

  a.intro__button
    width 180px
    height 50px
    display inline-block
    text-align center
    border 1px solid hovergray
    padding 0
    margin 50px 15px 0 15px
    
    .intro__button--inner
      width 100%
      height 100%
      background-color #fff
      opacity 0.10

    p
      margin-top -34px
      color hovergray
      font-size 1.2em
      font-weight bold
      antialiased()
    
    &:hover
      border 1px solid success
        
      .intro__button--inner
        background-color transparent
      
      p
        color success

.home__section--footer
  width 100%
  color hovergray
  background-color backgroundgray
  border-top 1px solid bordergray
  padding 60px 0 60px 0

  h1
    font-size 2.1em
    font-weight normal
    color hovergray
    antialiased()
    text-align center

  a
    font-weight bold
    color hovergray

    &:hover
      color textgray

.home__section--channels
  width 100%
  background-color #fff
  padding 0 0 70px 0
  border-top 1px solid bordergray
  text-align center

  h1
    font-size 2.1em
    color hovergray
    margin 80px 0 120px 0
    font-weight normal

.home__section--channels__channels
  position relative
  float left
  width 100%
  margin 0
  padding 0

  .home__path
    position relative
    float left
    width 100%
    color textgray
    text-align center
    padding 0 10px 30px 10px
    margin 0

    li:last-child
      font-weight normal

    .breadcrumb
      position relative
      float left

privacy-color('.privacy--', color)

.home__section-channels__channels .home__path--closed:hover,
.home__section-channels__channels .home__path--public:hover
  color hovergray

.home__section-channels__images
  position relative
  float left
  width 100%
  padding 0

.home__section-channels__button
  position relative
  float left
  width 100%
  margin 0 0 40px 0
  text-align center

  .button--inblock
    position relative
    left 0
    width 200px
    margin auto
    color lightgray
    border-top 1px solid bordergray

    &:hover
      color hovergray
      border-top 1px solid textgray

@media (max-width:(block_width_mar * 4) + 19)
  html, body
    font-size 13px

  .home__section--channels__channels
    .grid
      -webkit-justify-content center
      justify-content center

      .grid__block
        max-width 220px
        min-width 220px

      .grid__block__inner
        height 220px

      .grid__block__content__image
        max-width 220px
        max-height 220px

@media (max-width:(block_width_mar * 3) + 16)
  .home__section--intro
    a.intro__button
      width 100px
      height 40px
      line-height 30px
      margin 15px 12px 0 12px
      
    h1
      font-size 1.8em

  .home__section--channels
    padding 20px 0 20px

    h2
      padding 0

  .home__section--channels__channels
    padding 0

    .home__path
      padding 0
      margin-bottom 20px

    .grid
      .grid__block
        max-width 300px
        min-width 300px

      .grid__block__inner
        height 300px

      .grid__block__content__image
        max-width 300px
        max-height 300px

  .home__section-footer
    margin 0 0 40px 0

@media (max-width:(block_width_mar * 2) + 20)
  .home__section--channels
    padding 20px 8px 20px 8px

@media (max-width:500px)
  .home__section--intro
    padding 0 15px 0 15px
    
    .feynman
      width 250px

    h1
      font-size 1.5em
      font-weight 100

  .home__section--channels
    padding 20px 0 70px 0

@media (max-height:500px)
  .home__section--intro
    .feynman
      width 250px
