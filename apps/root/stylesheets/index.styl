@import '../components/layout/variables'

.path
  display none
  
.home__path--public
  color public
  font-weight normal

.home__path--closed
  color closed
  font-weight normal

#layout-header
  display none

.home__section-intro__background
  position absolute
  float left
  left 0
  top 0
  width 100%
  height 512px
  background-color backgroundgray
  
.home__section-stats__background
  position absolute
  top 512px
  left 0
  width 100%
  height 275px
  background-color #EFEFEF
  
.home__section-footer__background
  position absolute
  top 3100px
  left 0
  width 100%
  height 275px
  background-color #EFEFEF

.home__mark, .home__mark--footer
  position relative
  float left
  height auto
  width 28px
  margin 115px 10px 0 0
  opacity 0.90
  z-index 199

.home__mark--footer
  margin 16px 10px 0 0

.home__section-intro
  position relative
  float left
  max-width 720px
  line-height 1.4em
  padding 108px 0 70px 0
  margin 0
  color hovergray
  
  a
    border-bottom 2px solid hovergray
    padding 0 0 1px 0
    
    &:hover
      color textgray
      border-bottom 2px solid textgray
    

a.home__section-intro__menu, a.home__section-intro__menu--mobile
  position relative
  float left
  clear both
  border-bottom 2px solid hovergray
  padding 0 0 1px 0
  margin 0
  
  &:hover
    color public
    border-bottom 2px solid public

a.home__section-intro__menu--mobile
  display none
  
  &:hover
    color public
    border-bottom 2px solid public

.static__menu, .static__menu--footer
  position relative
  float right
  margin 110px 0 0 0
  right 0
  width 150px
  text-align left
  z-index 199

.static__menu--dark
  color hovergray
  
  &:hover
    color textgray

.static__menu--light
  color lightgray
  
  &:hover
    color hovergray

.home__section-stats
  position relative
  float left
  width 100%
  padding 70px 0 70px 38px

.home__section-stats__column
  position relative
  float left
  width 32%
  text-align center
  
  h1
    font-size 5em
    font-weight normal
    color lightgray
    margin 0
  
  h2
    font-weight normal
    color lightgray
    margin 0

.home__section-channels
  position relative
  float left
  background-color none
  padding 40px 0 70px 38px
  
  h2
    color hovergray

.home__section-channels__channels
  position relative
  float left
  width 100%
  margin 0
  
  h2
    position relative
    float left
    color lightgray
    padding 40px 0 20px 0
    margin 0
    
.home__section-channels__channels a:hover .home__path--closed,
.home__section-channels__channels a:hover .home__path--public
  color hovergray

.home__section-channels__images
  position relative
  float left
  width 100%
  overflow hidden
  text-align center
  padding 0 0 40px 0

  img 
    position relative
    float left
    height 300px
    width 300px
    overflow hidden
    margin 0 25px 0 0

.home__section-channels__button
  position relative
  float left
  width 100%
  margin 20px 0 40px 0
  text-align center
  
  .button--inblock
    position relative
    left 0
    width 280px
    margin auto
    color lightgray
    
    &:hover
      color hovergray

.home__section-footer
  position relative
  float left
  width 100%
  color hovergray
  margin 40px 0 0 0
  
  h2
    position relative
    float left
    max-width 720px
  
  a
    color hovergray
    border-bottom 2px solid hovergray
    padding 0 0 1px 0
    
    &:hover
      color textgray
      border-bottom 2px solid textgray
  
  .static__menu--footer
    margin 12px 0 0 0
    a
      border 0

@media (max-width:1023px)
  .home__section-intro 
    max-width 640px
    
  a.home__section-intro__menu--mobile
    display inline
    
  .static__menu
    display none

