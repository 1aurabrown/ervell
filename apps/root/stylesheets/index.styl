@import '../components/layout/variables'

.container
  position absolute
  top 0
  left 0
  width 100%
  max-width 100%
  padding 0 0 0 0

.path
  display none

#layout-header
  display none

.section-1, .section-2
  position relative
  float left
  width 100%
  min-height 500px
  background-color #fff
  padding 2em 7em 2em 7em

.section-1
  background-color backgroundgray
  color #111
  top 0
  padding 6.8em 7em 6.8em 7em

.home__mark
  position absolute
  top 7.3em
  left 65px
  display inline-block
  width 30px
  margin 0 0 0 0
  opacity 0.90
  z-index 199

.home__menu
  position relative
  float right
  top 0
  right 0
  color textgray
  text-align right
  padding 0
  z-index 199

.intro
  position relative
  top 0
  max-width 740px
  margin 0

.intro--register
  border-bottom 2px solid #111
  padding 0 0 4px 0
  
  &:hover
    color public
    border-bottom 2px solid public

.section-2
  color lightgray
  background-color #fff
  
  a 
    color textgray
  
    &:hover
      color hovergray

.section-2__links
  position relative
  float left
  width 100%
  margin 0 0 0 0
  
  h3 a
    color hovergray
    padding 10px 0 10px 0

.section-2__images
  position relative
  float left
  width 100%
  overflow hidden
  text-align center

  img 
    position relative
    float left
    height 300px
    width 300px
    overflow hidden
    margin 5px 30px 80px 0

.section-2__activity
  position relative
  float left
  width 300px
  margin 0 30px 0 0
  
  a
    color textgray
    
    &:hover
      color hovergray




