.body--home #layout-header
  position absolute
  background transparent
  color hovergray
  svg
    fill hovergray

.home__section--intro
  width 100%
  height auto
  padding 0 10px
  background-color #fff
  padding 4em 3em 4em
  margin-bottom 3em
  color hovergray
  border-bottom 1px solid bordergray
  text-align left

  h1
    font-size 2.5em

  a
    padding-bottom 4px
    border-bottom 2px solid hovergray

.home__section--intro__mark
  margin 2em 0 4em 0

.home__section--footer
  position relative
  float left
  width 100%
  color hovergray
  background-color #fff
  border-top 1px solid bordergray
  padding 60px 0 60px 0

  h2
    width 100%
    text-align center
    position relative
    float left

  a
    color hovergray
    border-bottom 2px solid hovergray
    padding 0 0 1px 0

    &:hover
      color textgray
      border-bottom 2px solid textgray

.home__section-intro__text
  margin 50px 0 90px 0
  line-height 1.4em
  text-align center
  color hovergray

  a
    border-bottom 2px solid hovergray
    padding 0

    &:hover
      color textgray
      border-bottom 2px solid textgray

@media (max-width:(block_width_mar * 4) + 19)
  .home__section-intro__text
    width 90%
    left 5%

@media (max-width:500px)
  .home__section-intro__text
    width 96%
    text-align left
