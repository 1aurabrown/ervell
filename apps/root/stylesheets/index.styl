@import '../components/layout/variables'

.path
  display none

#layout-header
  display none

.home__gray-background
  position absolute
  float left
  left 0
  top 0
  width 100%
  height 540px
  background-color backgroundgray

.home__mark
  position relative
  float left
  height auto
  width 28px
  margin 115px 10px 0 0
  opacity 0.90
  z-index 199

.intro
  position relative
  float left
  top 108px
  max-width 720px
  height 540px
  line-height 1.4em
  margin 0
  color hovergray
  
  a
    border-bottom 2px solid #111
    padding 0 0 1px 0
    
    &:hover
      color textgray
      border-bottom 2px solid textgray
    

a.intro__menu, a.intro__menu--mobile
  border-bottom 2px solid #111
  padding 0 0 1px 0
  margin 10px 0 0 0
  
  &:hover
    color public
    border-bottom 2px solid public

a.intro__menu--mobile
  display none
  
  &:hover
    color public
    border-bottom 2px solid public

.static__menu
  position relative
  float right
  top 110px
  right 0
  width 150px
  text-align left
  z-index 199

.static__menu--dark
  color hovergray
  
  &:hover
    color textgray

.static__menu--light
  color lightgray
  
  &:hover
    color hovergray

.section-2
  color lightgray
  
  a 
    color textgray
  
    &:hover
      color hovergray
      
.home__section-2
  position relative
  float left
  width 100%
  background-color none
  padding 2em 0 2em 0

.home__section-2__channels
  position relative
  float left
  width 100%
  margin 0
  
  h3 a
    color hovergray
    padding 10px 0 10px 0

.home__section-2__images
  position relative
  float left
  width 100%
  overflow hidden
  text-align center

  img 
    position relative
    float left
    height 300px
    width 300px
    overflow hidden
    margin 5px 30px 80px 0

.home__section-2__activity
  position relative
  float left
  width 300px
  margin 0 30px 0 0
  
  a
    color hovergray
    
    &:hover
      color textgray

@media (max-width:1023px)
  .intro 
    max-width 640px
    
  a.intro__menu--mobile
    display inline
    
  .static__menu
    display none

