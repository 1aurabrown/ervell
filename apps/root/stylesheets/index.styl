@import '../components/layout/variables'

.container
  position absolute
  top 0
  left 0
  width 100%
  max-width 100%
  padding 0 0 0 0

#layout-header 
  display none

.section-1, .section-2, .section-3, .section-4
  position relative
  float left
  width: 100%
  min-height 400px
  font-size 22px
  line-height 1.5
  background-color white
  padding 2.5em 2.2em 2.2em 2.2em

.section-1
  background-color white


.section-2
  background-color #F9F9F9

.section-2__links
  position relative
  float left
  width 27%

.section-2__images
  position relative
  float left
  width 73%
  overflow hidden

  img 
    height 300px
    margin 40px 25px 0 0

.section-3
  background-color #F5F5F5
  text-align center

  img
    width 45px
    opacity 0.75
    margin 0 11% 0 11%

.section-4
  background-color #E5E5E5

.home-logo
  display inline-block
  width 160px
  opacity 0.75

.home-mark
  display inline-block
  width 50px
  margin 0 0 0px 20px
  opacity 0.75

.login
  position fixed
  top 65px
  right 40px
  padding 0 0 0 0
  font-size 21px
  z-index 199

.introduction
  padding 2em 0
  max-width 700px



