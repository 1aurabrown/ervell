extends ../../../components/layout/index

block styles
  link( type='text/css', rel='stylesheet', href=(sd.ASSET_PATH + 'feed' + sd.CSS_EXT) )

block body
  include ./path

  for channel in channels
    .explore-group
      .explore__channel.flex-container
        h2.explore__channel__path
          ul.breadcrumb
            li
              a(href="/#{channel.get('user').slug}")=channel.get('user').username
            li
              a(href="/#{channel.get('user').slug}/#{channel.get('slug')}" class="search__results__result--privacy-#{channel.getVisibility()}")=channel.get('title')
          .explore__timestamp Last interaction #{channel.updatedAtAgo()}
        .explore__channel__blocks
          .grid
            for block in channel.get('contents').models
              include ../../../components/block_collection/templates/block


block scripts
  script( src=sd.ASSET_PATH + 'explore' + sd.JS_EXT )
