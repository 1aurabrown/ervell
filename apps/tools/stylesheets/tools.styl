.tools__frame
  width 50%
  margin (s_margin * 3) auto
  border 2px solid bordergray
  padding 30px 20px 30px 20px
  font-size 1em
  font-weight normal
  line-height 1.4

  strong
    text-align center

  p
    margin (s_margin * 2) 0

  .caption
    font-size s_caption
    padding-top 15px
    text-align center
    font-weight bold

  input
    background-color bordergray
    margin 5px 0 10px 0

  button
    margin 20px 0 0 0

  .small
    font-size s_caption + 1
    color textgray
    margin 0 0 8px 0
    line-height 14px

.static__tools__bookmarklet-button, .static__tools__social-button
  display block
  width 100%
  height 50px
  line-height 50px
  font-weight bold
  text-align center
  background-color bordergray
  border 1px dashed lightgray
  margin 12px 0 12px 0

@media (max-width:800px)
  .tools__frame
    width 100%