extends ../../../components/layout/index--bare

block styles
  link( type='text/css', rel='stylesheet', href=(sd.ASSET_PATH + 'getting_started' + sd.CSS_EXT) )

block body
  #getting-started--page.valign-outer
    .valign-inner
      h1 Using Are.na

      .getting-started--column
        img(src="../images/channel.png", alt="Channel")

        .getting-started--column__caption
          #[strong Channels] are collections of content. They can be #[strong.privacy--public public] (anyone can see and add to it), #[strong.privacy--closed closed] (anyone can see it, only you and your collaborators can add to it), or #[strong.privacy--private private] (only you and your collaborators can see and add to it)

      .getting-started--column
        img(src="../images/block.png", alt="Block")

        .getting-started--column__caption
          #[strong Blocks] are the content you connect to channels. A block can be a file or an image you upload, raw text, a link to a website, an embed (Vimeo, YouTube, SoundCloud, etc), a pdf, etc.

      .getting-started--column
        img(src="../images/connection.png", alt="Connection")

        .getting-started--column__caption
          | A #[strong connection] is made when a person puts a block in a channel. Blocks can have an infinite number of connections and connections can be made to private and public channels.

      h3: a.getting-started--button.button--wide(href="/explore") Get started &rarr;