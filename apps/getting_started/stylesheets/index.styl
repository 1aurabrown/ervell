@import '../../../components/layout/variables'

.getting-started--container
  position relative
  width 64%
  left 18%
  display inline-block
  vertical-align top
  padding 0
  margin auto
  color #333
  font-size 24px
  line-height 1.3
  
  h1
    width 68%
    height 65px
    margin-left 32%
    font-weight 400
    font-size 24px
    margin-top 26px

.getting-started__column1
  position relative
  float left
  padding 0
  margin 0
  width 30%
  text-align right
  
  img
    width 280px
    max-width 100%
    padding 6px 0 0 0

.getting-started__column2
  position relative
  float right
  padding 0
  margin 0
  width 68%
  
.getting-started__column--inner
  position relative
  height 280px
  margin 35px 0 0 0
  
  p
    margin 0 0 20px 0

.getting-started--button
  position fixed
  top 0
  right 10px
  color #333
  padding 0
  margin 26px 18px 0 0
  font-weight bold
  font-size 24px
  
  a
    &:hover
      color public

@media (max-height:700px)
  .getting-started--container
    h1
      height 40px
  
  .getting-started__column1
    img
      width 200px
  
  .getting-started__column--inner
    height 200px

@media (max-width:(block_width_mar * 4) + 20)
  .getting-started--container
    font-size 18px
  
  .getting-started--button
    position absolute

@media (max-width:(block_width_mar * 3) + 20)
  .getting-started--container
    width 94%
    left 3%
    font-size 18px
  
    h1
      height 30px
      font-size 18px
  
  .getting-started--button
    font-size 18px
      
@media (max-width:(block_width_mar * 2) + 20)
  .getting-started__column1
    img
      width 180px
  
  .getting-started__column--inner
    height 180px
    
  .getting-started--container
    font-size 14px
  
    h1
      height 20px
      font-size 14px
    
  .getting-started--button
    position relative
    margin 25px 0 25px 35%
    font-size 14px
    line-height 2em
