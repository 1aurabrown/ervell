@import '../../components/layout/variables'

#getting-started--page h1
  margin-top 0
  margin-bottom s_margin * 5

.getting-started--column
  width 320px
  display inline-block
  vertical-align top
  padding 0 s_margin * 1
  margin 0 50px 0 50px

  img
    max-width 100%

.getting-started--column__caption
  margin-top s_margin * 3
  line-height 1.4
  text-align left
  font-size 16px
  
  li
    margin 10px 0 0 0px
  
  .no-bullet
    list-style none

.getting-started--button
  max-width 320px
  display block
  margin s_margin * 8 auto

