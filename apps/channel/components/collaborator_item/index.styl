.CollaboratorItem
  display flex
  width 100%
  border-top 1px solid colors-gray-border
  justify-content space-between
  align-items center
  padding 0.5em

  &__representation
    display flex
    flex 1

  &__avatar
    width 2.5em
    height @width
    initials(font-size-sm, colors-gray-text, colors-gray-secondary)
    z-index 1

    > img
      display block
      width 100%
      height 100%
      vertical-align bottom
      z-index 2

  &__metadata
    display flex
    flex-direction column
    flex 1
    padding-left 1em
    font-size font-size-xs
    justify-content space-around

  &__name
    font-weight bold

  &__status
    color colors-gray-light

  &__actions
