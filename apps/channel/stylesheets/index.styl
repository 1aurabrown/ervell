.channel-container
  padding 32px 0 0 0
  border-top 1px solid backgroundgray

  .flex-container:before, .flex-container:after
    display none

.channel--drop-zone
  display none
  background-color rgba(255,255,255, 0.96)
  z-index lightbox_z

  &.is-droppable
    display block

  .abs-fill, &.abs-fill
    position fixed

  .inner
    pointer-events none
    position fixed
    top 50%
    width 100%
    text-align center
    v-align()

  .channel--drop-zone__progress
    width 0px
    background-color rgba(221, 221, 221, 0.35)

  input[type='file']
    display none

  h1
    font-weight normal

  .channel--drop-zone__feedback
    display none

  .channel--drop-zone__instructions
    display block

  &.is-uploading

    .channel--drop-zone__feedback
      display block

    .channel--drop-zone__instructions
      display none

#new-collaborator__search, .new-collaborator__results
  display none

.is-active
  #new-collaborator__search, .new-collaborator__results
    display block
  .new-collaborator__add
    display none
