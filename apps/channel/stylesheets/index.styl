.channel-container
  padding 32px 0 0 0
  border-top 1px solid #F0F0F0

  .flex-container:before, .flex-container:after
    display none

  .channel-empty
    display none

  &.is-empty .channel-empty
    display table

.channel--drop-zone
  transform translateY(-1000%)
  background-color rgba(255,255,255, 0.96)
  z-index lightbox_z

  &.is-droppable
    transform translateY(0)

  .abs-fill, &.abs-fill
    position fixed

  .inner
    pointer-events none
    position fixed
    top 50%
    width 100%
    text-align center
    v-align()

  .channel--drop-zone__progress
    width 0px
    background-color rgba(221, 221, 221, 0.35)

  input[type='file']
    display none

  h1
    font-weight normal

  .channel--drop-zone__feedback
    display none

  .channel--drop-zone__instructions
    display block

  &.is-uploading

    .channel--drop-zone__feedback
      display block

    .channel--drop-zone__instructions
      display none

.collaborators__edit
  display none

.export__status
  color alert

.delete-channel--confirmation
  color alert
  display none

  &.is-active
    display block

#metadata--description

  .attribute-group textarea
    font-size 12px

  span
    margin-right 6px
    color textgray

  span:hover
    hovergray

.is-editing
  .collaborators__edit
    display block

  .collaborators__read
    display none

  .collaborators__edit__result__remove
    font-size 10px
    margin-right 6px
    color alert
    cursor pointer

    &:before
      top -1px
      font-size 8px

  .collaborators__edit__result
    color hovergray
    font-weight bold

#new-collaborator__search, .new-collaborator__results
  display none

.is-active
  #new-collaborator__search, .new-collaborator__results
    display block

  .new-collaborator__results__result
    background #fff
    padding 6px
    font-weight bold
    cursor pointer
    width 151px

  .new-collaborator__results__result:hover
    background-color secondbackgroundgray
    color hovergray

    .new-collaborator__result__add
      color hovergray

  .new-collaborator__result__add
    font-size 10px
    margin-right 6px
    color textgray

    &:before
      top -1px
      font-size 7px

  #new-collaborator__search
    padding 3px

  .new-collaborator__results
    position absolute
    z-index 9999

  .new-collaborator__add
    display none
