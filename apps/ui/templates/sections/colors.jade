.UI__section
  h3.Type.Type--size-h3
    | Colors

  .UI__section__component
    for set, namespace in colors
      h6.Type.Type--size-h6
        = namespace

      .UISwatches
        for hex, name in set
          .UISwatch
            .UISwatch__color( style="background-color: #{hex};" )
            .UISwatch__label
              | colors-#{namespace}-#{name}: #{hex}
