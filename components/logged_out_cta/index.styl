.LoggedOutCTA
  position fixed
  bottom 0
  left 0
  right 0
  width 100%
  padding 1em

  display flex
  flex-direction row
  justify-content center
  align-items center
  text-align center
  z-index header_z
  border-top 1px solid colors-gray-border
  background-color white
  color colors-gray-text
  font-size font-size-base
  line-height line-height-base
  transform translateZ(0)

  &__close
    position absolute
    top 0
    right 0
    padding 0.5em 1em
    font-size font-size-h4
    line-height 1
    color colors-gray-text

  > .Button
    margin-left 2em

+mobile()
  .LoggedOutCTA
    flex-direction column
