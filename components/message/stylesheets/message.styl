@import '../../layout/variables'

.message
  position fixed
  bottom 0
  left 0
  background-color secondbackgroundgray
  width 500px
  padding container_pad

.message__inner
  position relative

.message__inner__close
  position absolute
  top -10px
  right -10px
  color lightgray

.message__inner__title
  font-weight bold
  padding 10px 0

.message__inner__body
  line-height 1.5
  a
    font-weight bold
