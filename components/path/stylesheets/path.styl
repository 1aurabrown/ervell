@import '../../layout/variables'

.path--header
  margin 6em 10px 4em 10px

.path
  position relative
  color lightgray
  text-align left
  font-weight normal

  clearfix()

  &.stuck
    position fixed
    z-index header_z
    top 0
    left 50px
    height 50px
    margin 0
    background-color backgroundgray

    h1
      font-size 1em
      line-height 3.1em

    .edit-channel, .edit-profile
      display none

    .root__toggle
      height auto
      margin 9px 0 0 0

      .root__toggle__item
        font-size s_caption

  .path__breadcrumb
    breadcrumb: '/' 8px lightgray

    li:after
      font-weight normal

    li:last-child
      color textgray

  privacy-color('.path__breadcrumb li:last-child.privacy-', color)

  h1
    margin 0
    position relative
    float left
    width auto

  .username
    font-weight bold

  .username:hover
    border-bottom 0

  .channel
    // nothing

  .active
    font-weight normal
    color hovergray

  .separator
    margin 0 0.25em
    font-weight 400

.edit-channel, .edit-profile
  position relative
  float right
  width auto
  height 30px
  color lightgray
  font-size s_caption + 1
  line-height: 50px;
  font-weight bold

.edit-channel__icon, .edit-channel__info-icon
    position relative
    float left
    width 18px
    height 30px
    margin 8px 4px 0 20px
    line-height 1em

    svg
      width 18px
      height 18px
      padding 0
      margin 0
      outline none
      stroke lightgray
      fill lightgray

      .iconic-cogs-lg, .iconic-info-lg
        display none

      .iconic-cogs-md, .iconic-info-md
        display none

      .iconic-cogs-sm, .iconic-info-sm
        display inline

      &:hover
        stroke hovergray
        fill hovergray
        cursor pointer

.edit-channel__info-icon
  display none

.metadata
  padding 45px 0 10px 0
  font-size s_caption + 1
  line-height 1.5

  a
    font-weight bold
    color textgray

    &:hover
      color hovergray

  .metadata__column
    display inline-block
    vertical-align top
    margin 0 50px 0 0
    width 210px

  .metadata__title
    width 100%
    color lightgray

  .metadata__text
    width 100%
    font-weight normal
    color lightgray

  .metadata--selector__option
    color lightgray
    font-weight bold
    hover-color hovergray

    &.is-active
      color hovergray

.root__toggle
  position relative
  display inline-block
  height 24px
  margin 1px 0 0 0

  .root__toggle__item
    color lightgray
    font-size s_caption + 1
    line-height 1.3em

    &.active
      color hovergray
      font-weight bold

@media (max-width:1023px)
  .path h1
    width 75%

  .metadata
    display none

  .edit-channel__info-icon
    display block

@media (max-width:500px)
  .edit-channel__icon, .edit-channel__info-icon
    margin 4px 10px 0 10px
