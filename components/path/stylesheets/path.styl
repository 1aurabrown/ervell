@import '../../layout/variables'

.path
  position relative
  color textgray
  margin 6em 10px 4em 10px
  text-align left
  font-weight normal

  h1
    position relative
    float left
    width auto
    
  .username
    font-weight bold

  .username:hover
    border-bottom 0

  .channel

  .active
    font-weight normal
    color hovergray

  .separator
    margin 0 0.25em
    font-weight 400

  privacy-color('.privacy-', color)

.edit-channel
  position relative
  float right
  width auto
  color lightgray
  font-size caption + 1
  line-height: 30px;

.metadata
  padding 75px 0 10px 0
  color textgray
  font-size caption + 1
  line-height 1.5

  .metadata__column
    display inline-block
    vertical-align top
    margin 0 50px 0 0
    width 210px

  .metadata__title
    width 100%
    color lightgray

  .metadata__text
    width 100%
    font-weight normal
    color textgray

  .metadata--active
    color lightgray
    font-weight normal
    cursor normal

.root--active 
  color textgray
  font-weight bold

.root--unactive
  color bordergray

  a
    color bordergray
  
    &:hover
      color textgray
  
    
    
  
  

