@import '../../layout/variables'

.path--header
  margin 6em auto 0 auto
  padding 0 10px 0 10px

.path__inner
  padding-bottom 28px

.path
  position relative
  color lightgray
  text-align left
  font-weight normal

  clearfix()

  .path__headline
    @extend h1
    margin 0
    position relative
    float left
    width auto

  &.stuck
    position fixed
    z-index header_z
    top 1px
    left 50px
    height 38px
    margin 0
    background-color backgroundgray

    .path__headline
      font-size 1em
      line-height 3.1em

    .edit-channel, .edit-profile, .channel-settings
      display none

    .root__toggle
      height auto
      margin 9px 0 0 0

      .root__toggle__item
        font-size s_caption

  .path__breadcrumb
    min-width 115px
    breadcrumb: '/' 8px lightgray

    li:after
      font-weight normal

    .path__channel
      font-weight normal
      color textgray

    li:last-child
      color textgray

    .path__sub
      font-weight normal


  privacy-color('.path__breadcrumb li.path__channel.privacy-', color)

  .username
    font-weight bold

  .username:hover
    border-bottom 0

  .channel
    // nothing

  .active
    font-weight normal
    color hovergray

  .separator
    margin 0 0.25em
    font-weight 400

.channel-settings
  position relative
  float right
  clear right
  width auto
  height 20px
  color lightgray
  font-size s_caption + 1
  line-height 20px
  font-weight bold
  margin 14px 0 0 0

.follow_button
  &:hover
    color hovergray

