.show-info
  display none

.metadata
  padding 0
  height auto
  font-size s_caption + 1
  line-height 1.5

  a
    font-weight bold
    color textgray

    &:hover
      color hovergray

  .metadata__column
    display inline-block
    vertical-align top
    margin 0 20px 0 0
    width 225px
    height auto
    min-height 80px
    max-height 163px
    overflow hidden

  .metadata__title
    width 100%
    color lightgray

  .metadata__text
    width 100%
    font-weight normal
    color lightgray

  .metadata--selector__option
    color lightgray
    font-weight bold
    hover-color hovergray

    &.is-active
      color hovergray

.root__toggle
  position relative
  display inline-block
  height 24px
  margin 1px 0 0 0

  .root__toggle__item
    color lightgray
    font-size s_caption + 1
    line-height 1.3em

    &.active
      color hovergray
      font-weight bold

@media (max-width:(block_width_mar * 3) + 30)
  .path
    .path__headline
      margin-bottom 15px

  .metadata
    display none

  .channel-settings
    float left
    clear left
    margin 4px 0 0 0

  .show-info
    display block

@media (max-width:500px)
  .path.stuck
    display none

  .root__toggle
    margin -3px 0 0 0
