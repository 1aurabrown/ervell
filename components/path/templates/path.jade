section.path
  h1
    span.root
      a(href='/') Are.na
    span.separator /
    if !channel && !author
      span.root--active feed  
      span.root--unactive 
        span(class="iconic" data-glyph="loop" title="loop" aria-hidden="true") 
        a(href="#") explore
    if author
      span.username
        a(href="/" + author.get('slug'))=author.get('username')
    if channel
      span.separator /
      span.active.channel(class="privacy-#{channel.get('status')}")
        = channel.get('title')

  if channel
    .metadata
      if channel.has('metadata')
        .metadata__column
          .metadata__title
            | Description:
          .metadata__text
            = channel.get('metadata').description
      if channel.get('collaboration')
        #metadata--collaborators.metadata__column
          //- Rendered by client
      .metadata__column
        .metadata__title
          | Followers:
        .metadata__text
          = channel.get('follower_count')

  else if author
    .metadata
      .metadata__column
        .metadata__title
          | Info:
        .metadata__text
          | Son of @broskoski, father of a cat. NYC.
          a(href="#")  Noway.com

      .metadata__column
        .metadata__title
          | View:
        .metadata__text
          a(href="#") All
          |  / 
          a(href="#").metadata--active Channels
          |  /
          a(href="#") Blocks

      .metadata__column
        .metadata__title
          | Followers:
        .metadata__text
          = author.get('follower_count')

      .metadata__column
        .metadata__title
          | Following:
        .metadata__text
          = author.get('following_count')
//-
  if !channel && !author
    .metadata
      .metadata__column
        .metadata__title
          | View:
        .metadata__text
          a(href="#").active Feed
          |  / 
          a(href="#") Explore 


