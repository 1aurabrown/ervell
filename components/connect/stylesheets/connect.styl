@import '../../layout/variables'

.new-connection
  height 100%
  width 100%
  padding .6em
  
  input.input--wide, input[type='text'].input--wide
    color lightgray
    height 32px
    font-size s_caption
    border 1px solid bordergray
    
  .button--inblock--bottom
    font-size 20px
    height 30px
    bottom 15px
    color lightgray
    border-top 0px solid bordergray

    &:hover
      border-top 0px solid textgray
      color hovergray

.new-connection__caption
  font-size s_caption
  color lightgrayplus
  margin-top 1em
  margin-bottom 1em
  text-align center

.new-connection__caption--top
  margin-top 0

privacy-color('.new-connection__search-result-', border-color)
/* privacy-color('.feedback-', border-color) */
privacy-color('.new-connection__search-result-', color)
/* privacy-light-color('.new-connection__search-result-', background-color) */

.new-connection__search-result
  font-size s_caption
  text-align left
  width 100%
  height 34px
  padding 0.9em .5em 1em .5em
  margin 0
  border 1px solid bordergray
  border-bottom 0

  &:hover
    cursor pointer
    
    .breadcrumb li:first-child:before
      content '→'
      margin 0 5px 0 0
      transition(0.2s)

  .feedback
    display none

  .breadcrumb
    position absolute

    li
      white-space nowrap
      max-width 165px
      overflow hidden
      text-overflow ellipsis
      
    &:before
      content ''

.new-connection__search-result:last-child
  border-bottom 1px solid bordergray

.new-connection__search-result.is-loading
  .breadcrumb li:first-child:before
    margin 0 15px 0 0
    transition(0.4s)

.new-connection__search-result.is-connected
  position relative
  opacity 0.4
  
  .breadcrumb li:first-child:before
    content '→'
    margin 0 5px 0 0
    transition(0.1s)

  &:hover
    opacity 0.8
    .disconnect
      display block
      position absolute
      top 0
      left 0
      background-color #fff
      width 100%
      height 100%
      padding 10px 0 0 6px
      color hovergray

.new-connection__done-button
  position absolute

.button--inblock--mini
  display none

.disconnect
  display none

/* mini connection interface */
.metadata__content
  .connect-container
    top 20px
    height 121px
    width 300px

    .new-connection
      padding 0

      input
        height 29px
        border 0

      .new-connection__caption
        display none

      .new-connection__search-results
        height 90px
        width 100%
        overflow hidden

        ul
          position relative

        .new-connection__search-result
          height 30px
          border 0px
          margin 0
          padding 6px 0 0 10px
          border-top 1px solid bordergray
          background-color transparent

          &.is-connected
            &:hover
              .disconnect
                padding 6px 0 0 10px

      .button--inblock--bottom
        display none

      .button--inblock--mini
        display block
        position absolute
        left 0
        top 0
        width 15px
        height 30px
        line-height 14px
        font-size 22px
        margin 0 0 0 -20px
        color lightgrayplus

        &:hover
          background-color transparent
          color hovergray
          
  .new-connection__search-result
    &.is-loading
      .feedback
        -webkit-animation: 0s ; /* Safari 4+ */
        -moz-animation:    0s ; /* Fx 5+ */
        -o-animation:      0s ; /* Opera 12+ */
        animation:         0s ; /* IE 10+, Fx 29+ */
        border 0