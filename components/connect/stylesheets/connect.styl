@import '../../layout/variables'

.new-connection
  height 100%
  width 100%
  padding .6em

.new-connection__caption
  font-size s_caption
  color lightgrayplus
  margin-top 1em
  margin-bottom 1em

.new-connection__caption--top
  margin-top 0

privacy-color('.new-connection__search-result-', border-color)
privacy-color('.new-connection__search-result-', color)
privacy-light-color('.new-connection__search-result-', background-color)

.new-connection__search-result
  font-size s_caption
  text-align left
  width 100%
  height 38px
  padding 1em .5em 1em .5em
  margin .7em 0 .7em 0
  border 1px solid

  &:hover
    opacity 0.7
    transition opacity 0.1s
  
  .feedback
    display none
  
  .breadcrumb
    position absolute

.new-connection__search-result.is-loading
  -webkit-animation: glow .15s ease; /* Safari 4+ */
  -moz-animation:    glow .15s ease; /* Fx 5+ */
  -o-animation:      glow .15s ease; /* Opera 12+ */
  animation:         glow .15s ease; /* IE 10+, Fx 29+ */
  background-color #fff
  .feedback
    display block
    font-weight bold
  
  .breadcrumb
    display none

.new-connection__search-result.is-connected
  border 1px solid
  opacity 0.3
  width 100%
  height 38px
  padding 1em .5em 1em .5em
  margin .7em 0 .7em 0

  .breadcrumb
    display block
  
  .feedback
    display none

@-webkit-keyframes glow
  100%  {border: 0px; padding: 1.3em .5em 1em 0.9em ; margin: -0.3em -0.3em .5em -0.4em; width: 105%; height: 48px;}


.new-connection__done-button
  position absolute

@media (max-width:(block_width_mar * 1) + 20)
  .new-connection__search-result
    padding 0.7em 0.5em 0.7em 0.5em