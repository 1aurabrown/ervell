    &.is-loading
      .feedback
        -webkit-animation: 0s ; /* Safari 4+ */
        -moz-animation:    0s ; /* Fx 5+ */
        -o-animation:      0s ; /* Opera 12+ */
        animation:         0s ; /* IE 10+, Fx 29+ */
