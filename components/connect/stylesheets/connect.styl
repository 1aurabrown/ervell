@import '../../layout/variables'

.new-connection
  height 100%
  width 100%
  padding .6em

.new-connection__caption
  font-size s_caption
  color lightgrayplus
  margin-top 1em
  margin-bottom 1em

.new-connection__caption--top
  margin-top 0

.new-connection__search-result
  font-size s_caption
  text-align left
  padding 1em .5em 1em .5em
  margin .7em 0 .7em 0
  border 2px solid
  transition background-color 0.3s

  &:hover
    opacity 0.7
    transition opacity 0.1s

privacy-color('.new-connection__search-result-', border-color)
privacy-color('.new-connection__search-result-', color)
privacy-light-color('.new-connection__search-result-', background-color)
privacy-color('.is-loading.new-connection__search-result-', background-color)

.is-connected
  opacity 0.3
  background-color #fff
  transition (0.5s)
  
  &:hover
    opacity 0.3
    background-color #fff
    transition (0.5s)

.new-connection__done-button
  position absolute
  bottom 0.6em
  left 0
  font-weight bold
  font-size 1.4em
  cursor pointer