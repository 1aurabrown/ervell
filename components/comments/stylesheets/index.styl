.comment
  margin-top unit
  margin-bottom unit * 1.5
  > .comment-user
    font-weight bold
    margin-right (unit/2)
  > .comment-date-time, > .comment-edited-date-time
    text-transform uppercase
    font-size 0.7rem
    color lightgray
  > .comment-edited-date-time
    background-color backgroundgray
    margin-left (unit/2)
  > .comment-body
    display block
    p 14px
    p
      p 14px
      margin 0.45rem 0
    margin 0
    a
      font-weight bold
