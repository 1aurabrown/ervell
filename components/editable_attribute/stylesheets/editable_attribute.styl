@import '../../layout/variables'

.attr-backdrop
  position fixed
  top 0
  bottom 0
  left 0
  right 0
  opacity 0
  background-color modal_bg
  pointer-events none
  cursor pointer
  z-index 8001

.attr-editor
  position absolute
  top 0
  left 0
  display none

.attribute-group
  display inline-block
  position relative

  form,
  input,
  textarea
    width 100%
    height 100%
    margin 0
    background-color #fff

  &.can-edit:hover
    background-color highlight

.is-absent
  width 100%

  &.can-read
    display none !important

  &.can-edit
    display block !important

.is-editing
  .attr-backdrop
    opacity 0.75
    pointer-events all

  .attr-value
    opacity 0

  .attr-editor, .attr-help
    display block
    z-index 8004
