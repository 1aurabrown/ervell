@import '../../layout/variables'

.attr-backdrop
  position fixed
  top 0
  bottom 0
  left 0
  right 0
  opacity 0
  background-color modal_bg
  pointer-events none
  cursor pointer
  z-index 8001

.attr-editor
  position absolute
  top 0
  left 0
  display none

.attr-value
  height 100%

.attribute-group
  display inline-block
  position relative

  form,
  input,
  textarea
    width 100%
    height 100%
    margin 0
    padding 0
    background-color #fff
  
  textarea
    font-size 16px
    color #222

  &.can-edit:hover
    background-color backgroundgray
    -moz-box-shadow inset 0 0 2px highlight
    -webkit-box-shadow inset 0 0 2px highlight
    box-shadow inset 0 0 2px highlight
    cursor text
    color textgray

.is-absent
  width 100%

  &.can-read
    display none !important

  &.can-edit
    display block !important

.is-editing
  .attr-backdrop
    opacity 0.75
    pointer-events all

  .attr-value
    opacity 0

  .attr-editor, .attr-help
    display block
    padding 40px 35px
    z-index 8004
  
  textarea
    padding 0
