.Button
  &--overlay
    background-color colors-gray-translucent
    border none

    &:hover
      background-color white
      color colors-gray-hover

    &:active
      border none

    &[data-state='loading']
      background-color white

    &[data-state='error']
      background-color colors-gray-translucent
      color colors-state-alert
      &:hover
        background-color white
        color colors-gray-hover
