.HTML
  &--font-size-invariant
    // 500px as defined in `layout/index.styl`
    @media (max-width: 500px)
      font-size font-size-root

  &--disabled-scrolling
    width 100%
    height 100%
    overflow hidden

constrain()
  for i in (1..8)
    @media (min-width: (block_width_mar * i) + unit)
      center(block_width_mar * i)

  @media (max-width: (block_width_mar * 3) + unit)
    center(90%)

.Constrain
  constrain()

  &--narrow
    max-width (block_width_mar * 2)

.Page
  @extends .Constrain
  margin topbar_h auto
  padding 1em 0

.Container
  width 100%
  display flex
  min-height 100vh
  flex-direction column

  &__content
    flex 1
