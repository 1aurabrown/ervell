@import '../../../node_modules/jeet/stylus/jeet'
@import '../../layout/variables'

.block-collection
  cf()

.block
  column(1/4, cycle: 4)
  margin-bottom: 70px;
  padding: 1em
  background-size: contain
  background-position: center center
  background-repeat: no-repeat
  border: 1px solid transparent
  overflow: hidden
  position: relative

  .block__inner
    height 300px
    width 100%

  colors = 'closed' closed, 'public' public, 'private' private
  for color in colors
    &{'.block--privacy-' + color[0] + ':hover'}
      border: 1px solid color[1]

  hr
    border: 1px solid #eee

  .block__content
    line-height: 1.4
    font-size: 14px
    overflow: hidden
    text-overflow: ellipsis
    max-height: 330px
    text-align: left

    a
      text-decoration: underline

  .block__overlay
    opacity: 0
    pointer-events: none
    background: #fff
    background-position: center
    background-size: 40%
    background-repeat: no-repeat

  &:hover .block-overlay
    opacity: 1
    pointer-events: auto  

.block__title
  font-size 12px
  font-weight 700
  text-align center
  margin: 0.5em 0

.block__text
  font-size 15px
  font-weight 400
  margin: 0.5em 0

@media (min-width: 2000px)
  .block-outer
    column(1/5, uncycle: 4, cycle: 5)

@media (max-width: 1200px)
  .block-outer
    column(1/3, uncycle: 4, cycle: 3)

@media (max-width: 768px)
  .block-outer
    column(1/2, uncycle: 3, cycle: 2)

@media (max-width: 408px)
  .block-outer
    column(1, uncycle: 3, cycle: 1)