@import '../../../node_modules/jeet/stylus/jeet'
@import '../../layout/variables'

.grid
  display -webkit-box
  display -moz-box
  display -ms-flexbox
  display -webkit-flex
  display flex
  -webkit-justify-content
  justify-content flex-start
  -webkit-flex-flow row wrap
  -moz-flex-flow row wrap
  -ms-flex-flow row wrap
  flex-flow row wrap

.grid.grid--feed
  justify-content center

.grid__block
  flex 0 0 20%
  max-width block_width
  min-width block_width
  text-align center
  margin 0 10px 60px

// don't display non processed blocks
.grid__block--block
  display none

.grid__block--user .grid__block__inner
  border: 0px solid lightgray
  background-color backgroundgray

.grid__block--text .valign-inner
  vertical-align top

.grid__block .grid__block--channel
  color

.grid__block__inner
  width 100%
  height block_width
  position relative
  overflow hidden
  word-break break-word

privacy-color('.grid__block--channel .grid__block__inner--privacy-', border-color)

.grid__block__content__image
  max-width block_width - 1
  height auto
  max-height block_width

.grid__block__content__text
  @extend .serif-text
  padding 0.5em
  font-size 1em

  a
    font-weight 100

.grid__block__overlay
  opacity: 0
  pointer-events: none
  background: #fff
  background-position: center
  background-size: 40%
  background-repeat: no-repeat
  transition (opacity 0.2s)


.grid__block:hover .grid__block__overlay
  opacity 1
  background-color rgba(255,255,255, 0.92)
  border 2px solid bordergray

.grid__block.grid__block--text:hover .grid__block__overlay
  background-color rgba(255,255,255, 0.92)

.grid__block.grid__block--channel:hover .grid__block__overlay, .grid__block.grid__block--user:hover .grid__block__overlay
  background-color rgba(255,255,255, 0.92)
  opacity 0


.grid__block.grid__block--channel .grid__block__content
  padding s_margin

// privacy-color('.grid__block__overlay--privacy-', border-color)

.grid__block__mini-feed
  font-size caption
  padding-top 20px
  font-weight bold
  color textgray

  span
    padding 0 5px

.grid__block__title
  color lightgray
  position relative
  font-size caption
  font-weight bold
  text-align center
  margin 20px 0 5px 0
  bottom 0
  width 100%
  white-space nowrap

@import '../../avatar/stylesheets/avatar'
@import '../../lightbox/stylesheets/lightbox'
