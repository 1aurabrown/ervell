@import '../../../node_modules/jeet/stylus/jeet'
@import '../../layout/variables'

.grid
  display -webkit-box
  display -moz-box
  display -ms-flexbox
  display -webkit-flex
  display flex
  -webkit-justify-content
  justify-content flex-start
  -webkit-flex-flow row wrap
  -moz-flex-flow row wrap
  -ms-flex-flow row wrap
  flex-flow row wrap

.grid.grid--feed
  justify-content center

.grid__block
  flex 0 0 20%
  max-width block_width
  min-width block_width
  text-align center
  margin 0 10px 60px

// don't display non processed blocks
.grid__block--block
  display none

.grid__block--user .grid__block__inner
  background-color backgroundgray

.grid__block--text .valign-inner
  vertical-align top

.grid__block .grid__block--channel
  color

.grid__block__inner
  width 100%
  height block_width
  position relative
  overflow hidden
  word-break break-word
  border 2px solid #fff
  transition (all 0.2s)

privacy-color('.grid__block--channel .grid__block__inner--privacy-', border-color)

.grid__block__content__image
  max-width block_width - 1
  height auto
  max-height block_width

.grid__block__content__text
  @extend .serif-text
  padding 0.5em
  font-size 1em

  a
    font-weight normal

.grid__block__content__comment
  height 100%
  background-color backgroundgray
  padding 0 1.1em 0 1.1em
  border-top 1px solid lightgray

  p
    @extend .serif-text
    font-size caption + 1
    padding 15px

.grid__block__overlay
  opacity 0
  pointer-events none
  background #fff
  background-position center
  background-size: 40%
  background-repeat: no-repeat
  transition (opacity 0.2s)
  cursor pointer

.grid__block__inner:hover
  border 2px solid bordergray
  transition (all 0.2s)
  color hovergray
  cursor pointer

.grid__block__inner:hover .grid__block__overlay
  opacity 1
  background-color rgba(255,255,255, 0.95)
  pointer-events all

.grid__block.grid__block--text:hover .grid__block__overlay
  background-color rgba(255,255,255, 0.95)

.grid__block.grid__block--channel:hover .grid__block__overlay, .grid__block.grid__block--user:hover .grid__block__overlay
  background-color rgba(255,255,255, 0.95)
  opacity 0


.grid__block.grid__block--channel .grid__block__content
  padding s_margin

// privacy-color('.grid__block__overlay--privacy-', border-color)

.grid__block__mini-feed
  font-size caption
  padding-top 135px
  font-weight bold
  color textgray

  span
    padding 0 5px

.grid__block__connect-btn
  position absolute
  bottom 0
  width 90%
  height 60px
  margin 0 0 0 5%
  line-height 55px
  font-weight bold
  font-size 1em
  border-top 1px solid hovergray
  cursor pointer

  &:hover
    color hovergray

.grid__block__connect-container
  pointer-events none
  opacity 0
  background-color #fff
  transition(.1s, opacity)

  &.is-active
    opacity 1
    pointer-events all

.grid__block__title
  color lightgray
  position relative
  font-size caption
  font-weight bold
  text-align center
  margin 20px 0 5px 0
  bottom 0
  width 100%
  white-space nowrap

@import '../../avatar/stylesheets/avatar'
@import '../../lightbox/stylesheets/lightbox'
@import '../../connect/stylesheets/connect'
