@import '../../../node_modules/jeet/stylus/jeet'
@import '../../layout/variables'

.grid
  display -webkit-box
  display -moz-box
  display -ms-flexbox
  display -webkit-flex
  display flex
  -webkit-justify-content
  justify-content flex-start
  -webkit-flex-flow row wrap
  -moz-flex-flow row wrap
  -ms-flex-flow row wrap
  flex-flow row wrap

.grid.grid--feed
  -webkit-justify-content center
  justify-content center

.grid__block
  flex 0 0 20%
  max-width block_width
  min-width block_width
  text-align center
  margin 0 10px 60px

// don't display non processed blocks
.grid__block--block
  display none

.grid__block--user:hover
  color hovergray

.grid__block--user .grid__block__inner
  background-color backgroundgray

.grid__block--text .valign-inner
  vertical-align top

.grid__block--channel .grid__block__inner
  border-width 2px

.grid__block__inner, .grid__block__connect-container
  width 100%
  height block_width
  position relative
  overflow hidden
  word-break break-word
  border 1px solid #fff

privacy-color('.grid__block--channel .grid__block__inner--privacy-', border-color)
privacy-color('.grid__block--channel .grid__block__inner--privacy-', color)
privacy-color('.grid__block--channel .grid__block__inner--privacy-', border-color)
privacy-color-hover('.grid__block--channel .grid__block__inner--privacy-', border-color)

.grid__block--channel .grid__block__inner:hover
  h2
    font-weight bold

.grid__block__content__image
  max-width block_width - 1
  height auto
  max-height block_width

.grid__block__content__text
  @extend .serif-text
  height 100%
  padding 1em 1.2em 0 1.2em
  font-size 1em

  a
    font-weight normal
  p
    margin 0

.grid__block__content__comment
  height 100%
  background-color backgroundgray
  padding 0 1.1em 0 1.1em
  border-top 1px solid lightgray

  p
    @extend .serif-text
    font-size s_caption + 1
    padding 15px

.grid__block__overlay
  opacity 0
  pointer-events none
  background-position center
  background-size: 40%
  background-repeat: no-repeat
  cursor pointer

.grid__block__inner:hover, .grid__block__inner.is-active
  border 1px solid bordergray
  cursor pointer

.grid__block--channel .grid__block__inner:hover
  border-width 2px

.grid__block__inner:hover .grid__block__overlay
  opacity 1
  pointer-events all

.grid__block.grid__block--text:hover .grid__block__overlay
  // background-color rgba(255,255,255, 0.95)

.grid__block.grid__block--user:hover .grid__block__overlay
  // background-color rgba(255,255,255, 0.95)
  opacity 0

.grid__block.grid__block--channel .grid__block__content
  padding s_margin

.grid__block.grid__block--channel

  h2
    font-weight normal

.grid__block__mini-feed
  display none
  font-size s_caption
  padding-top 135px
  font-weight bold
  color textgray

  span
    padding 0 5px

.grid__block__connect-btn
  width 100%
  left 0
  background-color rgba(255,255,255, 0.85)

  &:hover
    background-color rgba(255,255,255, 0.95)

.grid__block__connect-container
  pointer-events none
  opacity 0
  background-color #fff

  &.is-active
    opacity 1
    pointer-events all

.grid__block__title
  color lightgray
  position relative
  font-size s_caption
  font-weight bold
  text-align center
  margin 20px 0 5px 0
  bottom 0
  width 100%
  white-space nowrap

  &:hover
    color hovergray
    
@media (max-width:(block_width_mar * 2) + 20)

  .grid__block
    max-width: 300px;
    min-width: 300px;
    margin auto

@import '../../avatar/stylesheets/avatar'
@import '../../lightbox/stylesheets/lightbox'
@import '../../connect/stylesheets/connect'
