avatar-size = 30px

initials(font-size, color, background-color = transparent)
  &[data-initials]
    position relative

    &:before
    &:after
      display block
      position absolute
      z-index -1

    &:before
      content ''
      top 0
      left 0
      right 0
      bottom 0
      background-color background-color

    &:after
      content attr(data-initials)
      font-size font-size
      color color
      top 50%
      left 50%
      transform translate(-50%, -50%)
      font-weight normal
      overflow hidden
      white-space nowrap

.Avatar
  width avatar-size
  height avatar-size
  initials(font-size-xs, white, colors-gray-lighter)

  > img
    display block
    width 100%
    height 100%
    vertical-align bottom
