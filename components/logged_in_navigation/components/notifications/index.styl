.NotificationsBadge
  font-size font-size-sm
  font-weight bold
  cursor pointer

.NotificationsDropdown
  display none
  position absolute
  width block_width
  background-color white
  outline 1px solid red
  top 100%
  right 1em

  &[data-active]
    display block

.Notifications
  max-height block_width
  overflow-y auto
  padding 1em 1.33em

.Notification
  collapsed-margins(1.25em)
  text-align left
  font-size font-size-xs
  line-height line-height-base

  a
    font-weight bold

  &__timestamp
    text-transform uppercase
    font-size font-size-xx
    letter-spacing 0.025em
    color colors-gray-light

  &__comment
    font-weight normal !important

  &--unread
    &
    .Notification__timestamp
      &
      & *
        color colors-state-alert !important
