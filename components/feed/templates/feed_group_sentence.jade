.sentence
  a(href="/#{group.actor().slug}" class="username")=group.actor().username
  &nbsp;
  span=group.action()
  &nbsp;
  if group.is_single()
    span
      a(href="#{group.single_subject_link()}", class="#{group.single_subject_class()}")=group.single_subject()
  else
    span=group.grouped_subject()
  if group.connector()
    &nbsp;
    span=group.connector()
    &nbsp;
    a(href="#{group.single_target_link()}")=group.single_target()
