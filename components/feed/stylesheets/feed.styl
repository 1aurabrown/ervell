@import '../../layout/variables'

.feed-group
  margin 0 0 40px 0
  border-top 1px dotted #eee
  padding 12px 0 0 0

.feed-group__sentence
  max-width 900px
  padding 10px
  margin auto
  text-align center
  font-weight normal
  color textgray

  a
    font-weight bold
    
    &:hover
      color hovergray

  privacy-color('.privacy--', color)

  .feed-group__timestamp
    font-size s_caption
    color lightgray
    font-weight normal

.explore
  position relative
  padding 0

.explore__channel
  position relative
  float left
  width 100%
  border-top 1px dotted #eee
  margin 0 0 50px 0
  padding 0 0 0 10px

  .explore__channel__path
    position relative
    float left
    color textgray
    padding 20px 0 12px 0
    margin 0

  privacy-color('.search__results__result--privacy-', color)

.explore__channel a:hover .search__results__result--privacy-closed,
.explore__channel a:hover .search__results__result--privacy-private,
.explore__channel a:hover .search__results__result--privacy-public
  color hovergray
  
.explore__timestamp
  font-size s_caption
  color lightgray
  font-weight normal
  line-height 22px
  padding 0 0 0 1px

.explore__channel__blocks
  position relative
  float left
  width 100%
  overflow hidden
  text-align center
  padding 0

  .grid__block
    max-width 300px
    min-width 300px

for i in (1..5)
  @media (min-width:(block_width_mar * i) + 20)
    .explore
      center(block_width_mar * i)

@media (max-width:(block_width_mar * 4) + 20)
  .explore__channel 
    .grid__block
      max-width 220px
      min-width 220px
  
    .grid__block__inner
      height 220px
      
    .grid__block__content__image
      max-width 219px
      max-height 220px

@media (max-width:500px)
  .feed-group
    margin 0 0 10px 0
  
  .feed-group__sentence
    font-size 1.1em