.ConfirmableMessage
  position fixed
  bottom 0
  left 0
  right 0
  width 100%
  padding 1em

  display flex
  flex-direction row
  justify-content center
  align-items center
  text-align center
  z-index header_z
  border-top 1px solid colors-gray-border
  background-color white
  color colors-gray-text
  font-size font-size-base
  line-height line-height-base
  transform translateZ(0)

  > a
    text-decoration underline

+mobile()
  .ConfirmableMessage
    flex-direction column

// Hide message on specifc pages
html[data-path='/welcome']
  .ConfirmableMessage
    display none
