.ConfirmableMessage
  position fixed
  bottom 0
  left 0
  right 0
  width 100%
  padding 1em

  display flex
  flex-direction row
  justify-content center
  align-items center
  text-align center
  z-index header_z
  border-top 1px solid colors-gray-border
  background-color white
  color colors-gray-text
  font-size font-size-lg
  line-height line-height-base
  transform translateZ(0)

  > .Button
    margin-left 2em

+mobile()
  .ConfirmableMessage
    flex-direction column

    > .Button
      margin-top 1em
      margin-left 0
