.block-collection--list
  &__row
    &--new
      background-color backgroundgray
      &:hover
        background-color backgroundgray
      &.active .block-collection--list__column--new-field__placeholder,
      &.active .block-collection--list__column--new-field__mobile-placeholder
        display none
  &__column
    &--new-field
      flex 6
      color lightgray
      position relative
      padding 0
      height 100%
      top 0
      +below(smallListBp)
        flex 4
      &__placeholder
        cursor text
        position absolute
        width 100%
        height 100%
        top 0
        left 0
        line-height 60px
        padding 0 unit
        +below(smallListBp)
          display none
      &__mobile-placeholder
        @extend .block-collection--list__column--new-field__placeholder
        display none
        +below(smallListBp)
          display block
          font-size s_small - 1
      &__field
        position absolute
        width 100%
        height 100%
        top 0
        left 0
        fieldset
          margin 0
          height 100%
        textarea
          padding 0
          width 100%
          max-height 60px
          resize none
          padding unit
          vertical-align middle
          -moz-box-sizing border-box
          -moz-padding-end 20px
          -moz-padding-start 20px
    &--new-button
      flex 1
      text-align center
      background-color secondbackgroundgray
      padding (unit) unit !important
      color lightgray
      height 59px
      button
        margin-top 0
        font-size s_small
      &:hover
        background-color darken(secondbackgroundgray, 10%)
      +below(smallListBp)
        padding (unit / 2) !important