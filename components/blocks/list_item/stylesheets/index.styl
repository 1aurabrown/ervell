.block-collection--list
  width 100%
  &__header, .block-item
    display flex
    font-size s_small
    color lightgray
    display -webkit-box
    display flex
    flex-direction row
    justify-content space-between
  // &__filter
    // display table-caption
  &__column
    width 200px
    padding (unit / 2)
    border-bottom 1px solid bordergray
    vertical-align middle
    font-size s_small
    &--thumb
      width 50px
    &--title
      width 400px
    &--source
      width 50px
    &--follow
      width 50px
    &--connect
      width 50px
    &--date
      width 100px
    &__comment-count
      position relative
      margin-left (unit / 2)
      vertical-align text-bottom
    &__comment-count:after
      content attr(data-count)
      position absolute
      top 1px
      left 0px
      font-size 9px
      width 100%
      text-align center
      color white
    &__source
      cursor pointer
    &__source:hover
      color hovergray
    &__connect, &__follow
      font-weight bold
      @extend .inline-link
    &__user
      .user__avatar
        margin 0 auto
        background backgroundgray
      .user__avatar--thumb .user__avatar__image
        top 0
    &__user-icon
      color lightgray
    .connect-container
      margin-top -(unit)
    img
      max-width unit * 2
      max-height unit * 2
      margin 0 auto
    a
      font-weight bold
    &:first-child
      padding-left 0px
    &:last-child
      padding-right 0px
    &[data-attr="icon"]
      text-align center
    &__small
      font-size s_caption
      padding-top 10px
    &__channel-icon
      width unit * 2
      height unit * 2
      border 3px solid black
      margin 0 auto
      &.privacy--closed
        border-color closed
      &.privacy--public
        border-color public
      &.privacy--private
        border-color private

  &__row
    display table-row
    border-bottom 1px solid bordergray
    cursor pointer
    height (unit * 4)
    &:hover
      background-color secondbackgroundgray