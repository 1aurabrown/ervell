- var displayTitle = "Are.na"
- if (title) 
  - var displayTitle = "Are.na / " + title
doctype html
html
  head
    title!= displayTitle

    link( type='text/css', rel='stylesheet', href=asset('/assets/all.css') )
    include ../../components/meta/templates/meta
    block meta

    block styles

    - extraClasses = ''

    block vars

  body.body--info(class=extraClasses)
    include header/templates/index--info
    .container
      block body
      include footer/templates/index--info

    include analytics

    #scripts
      != sharify.script()
      script( src="//ajax.googleapis.com/ajax/libs/jquery/2.1.0/jquery.min.js" )
      script( src="//js.pusher.com/2.2/pusher.min.js")
      script( src=asset('/assets/vendor.js') )
      script( src=asset('/assets/layout.js') )
      block scripts
