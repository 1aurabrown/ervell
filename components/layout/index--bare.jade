doctype html
html
  head
    title
      | Arena
      if channel
        |  / #{channel.get('title')}
      else if author
        |  / #{author.get('username')}

    meta(name="viewport", content="width=device-width, initial-scale=1.0, user-scalable=0")
    link(rel="shortcut icon" href="#{sd.IMAGE_PATH}favicon.ico" type="image/x-icon")
    link( type='text/css', rel='stylesheet', href=(sd.ASSET_PATH + 'layout' + sd.CSS_EXT) )
    include ../../components/meta/templates/meta
    block styles
  body.body--bare
    #modal-container
      //- rendered by client
    #l-lightbox-container
      //- rendered by client
    .container
      block body

    #l-loader-container
      include loader/templates/index

    #message-container

    a(data-section="#")#scroll-top &uarr;

    #scripts
      != sharify.script()
      script( src="//ajax.googleapis.com/ajax/libs/jquery/2.1.0/jquery.min.js" )
      script( src="//js.pusher.com/2.2/pusher.min.js")
      script( src=(sd.ASSET_PATH + 'layout' + sd.JS_EXT) )
      block scripts