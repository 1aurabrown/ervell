@keyframes dot--anim
  0%
    opacity 0
  50%
    opacity 1
  100%
    opacity 0

#l-loader-container
  position absolute
  color #000
  width 100%
  height 100%
  top 0
  left 0
  z-index 6001
  pointer-events none
  display none

  .dot
    display inline-block
    animation dot--anim .8s infinite

  .dot__1
    animation-delay 0.2s

  .dot__2
    animation-delay 0.4s

  .dot__3
    animation-delay 0.6s

body.is-loading #l-loader-container
  display block



