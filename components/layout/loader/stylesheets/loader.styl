@import '../../variables'

body.is-loading #l-loader-container
  display block

#l-loader-container
  position fixed
  width 100%
  height 100%
  top 0
  left 0
  z-index loader_z
  pointer-events none
  display none
  opacity 0.8

@-webkit-keyframes pulsate 
    0% 
      -webkit-transform scale(0.85, 0.85)
    30%
      -webkit-transform scale(1, 1)
    100% 
      -webkit-transform scale(0.85, 0.85)

#l-loader-container .asterisk
  animation pulsate 0.8s ease-in
  animation-iteration-count infinite
  -webkit-animation pulsate 0.8s ease-in
  -webkit-animation-iteration-count infinite

.asterisk
  position relative
  overflow hidden

  svg
    width 25px
    padding-top 4px
