@import '../../variables'

body.is-loading #l-loader-container
  display block

#l-loader-container
  position fixed
  width 100%
  height 100%
  top 0
  left 0
  z-index loader_z
  pointer-events none
  display none
  opacity 0.5

@-webkit-keyframes pulsate 
    0% 
      -webkit-transform scale(0.6, 0.6)
    30%
      -webkit-transform scale(0.7, 0.7)
    100% 
      -webkit-transform scale(0.6, 0.6)

#l-loader-container .asterisk
  position relative
  overflow hidden
  animation pulsate 0.8s ease-in
  animation-iteration-count infinite
  -webkit-animation pulsate 0.8s ease-in
  -webkit-animation-iteration-count infinite
  
  svg
    width 40px
    padding-top 4px
