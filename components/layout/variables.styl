// colors
closed = #D8A068
public = #10860B
private = #B60202
textgray = #454545
lightgray = #a9a9a9
backgroundgray = #FAFAFA

// z-index
header_z = 1001
modal_z = 2001

// transitions
transition(n)
  -webkit-transition: all ease-in n
  -moz-transition: all ease-in n
  -o-transition: all ease-in n
  transition: all ease-in n

//antialiased
antialiased()
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

caret()
  display inline-block
  content ''
  width 0
  height 0
  vertical-align middle

  border-top 8px solid
  border-right 4px solid transparent
  border-left 4px solid transparent
  margin 2px 0 4px 4px

privacy-color(prefix, attr)
  colors = 'closed' closed, 'public' public, 'private' private
  for value in colors
    {prefix + value[0]}
      if attr == border-color
        border 1px solid
      {attr} value[1]
