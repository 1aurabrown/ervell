topbar_h = 50px

#main-layout-header
  position: fixed
  top: 0
  left: 0
  height: topbar_h
  line-height: topbar_h
  width: 100%
  background-color: #eee
  padding: 0 3em
  display: flex

  .search
    flex-grow: 2

    input
      width: 100%
      height: 100%
      font-size: 18px
      background: transparent
      border: none

  .user
    flex-grow: 1
    text-align: center

    span
      padding: 0 0.25em