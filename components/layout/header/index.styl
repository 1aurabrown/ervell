@import '../variables'

#layout-header
  position fixed
  top 0
  left 0
  height topbar_h
  line-height topbar_h
  width 100%
  background-color rgba(250, 250, 250, 1)
  padding 0 container_pad 0 container_pad
  display flex
  justify-content space-between
  z-index header_z

  .layout-header__search
    flex-grow 3
    position relative

    input#layout-header__search__input
      width 100%
      height 100%
      font-size 14px
      background transparent
      border none
      outline 0
      font-weight 400
      padding-left 0

    .layout-header__search__results
      position absolute
      left - container_pad
      width 100%
      display none

    &.is-active .layout-header__search__results
      display block

    .search__results__list
      list-style-type none

    .search__results__result
      background #F4F4F4
      padding 4px
      padding-left container_pad
      font-size 14px
      border-top 1px solid lightgrayplus

    .layout-header__search__close
      position absolute
      right 40px
      font-size 22px
      top 0
      display none
      color lightgray
      
      &:hover
        color textgray

    &.is-loading .layout-header__search__close, &.is-active .layout-header__search__close, &.has-results .layout-header__search__close
      display block


  .right
    text-align right
    margin 0

  .logo
    .logo-icon svg
      display inline-block
      fill #333
      width 25px
      height 50px

    .logo-icon:hover
      svg
        fill textgray

.dropdown--menu
  cursor pointer

.dropdown
  display none
  position absolute
  font-size 14px
  top topbar_h
  z-index 3001
  background-color #F4F4F4

  &.dropdown--size
    width 300px
    right 0

  .dropdown__link
    display block
    padding 4px container_pad 4px container_pad
    border-top 1px solid lightgrayplus

  .dropdown__notification a
    display block
    height 59px
    font-size 12px
    padding 12px container_pad 0 0
    border-top 1px solid lightgray
    line-height 18px
    background-color backgroundgray
    color private

    &:hover
      color #111

.dropdown--is_active .dropdown
  display block

