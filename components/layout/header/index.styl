@import '../variables'

#layout-header
  position: fixed
  top: 0
  left: 0
  height: topbar_h
  line-height: topbar_h
  width: 100%
  background-color: rgba(250, 250, 250, 1)
  padding: 0 container_pad 0 container_pad
  display: flex
  justify-content: space-between
  z-index: header_z

  .search
    flex-grow 3

    input
      width 100%
      height 100%
      font-size 14px
      background transparent
      border none
      outline 0
      font-weight 400
      padding-left 0

  .right
    flex-grow: 1
    text-align right

  .user
    position relative

    .username
      color lightgray
      font-weight normal
      font-size 14px
      position relative

    .username:after
      content "â–¼"
      color #aaa
      font-size 8px
      vertical-align middle
      margin-left 0.3em

.dropdown--menu
  cursor pointer

.dropdown
  position absolute
  font-size 14px
  top topbar_h
  right -30px
  padding 10px 30px 10px 0
  display none
  z-index 3001
  background-color backgroundgray
  border-top 1px solid lightgray

  &.dropdown--size
    width 150px
    line-height 40px

  .dropdown__link
    display block
    padding 5px

.dropdown--is_active .dropdown
  display block