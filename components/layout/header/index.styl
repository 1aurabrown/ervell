@import '../variables'

#layout-header
  position fixed
  top 0
  left 0
  height topbar_h
  line-height topbar_h
  width 100%
  background-color rgba(250, 250, 250, 1)
  padding 0 container_pad 0 container_pad
  display flex
  justify-content space-between
  z-index header_z

  .layout-header__search
    flex-grow 3
    position relative

    input#layout-header__search__input
      width 100%
      height 100%
      font-size 14px
      background transparent
      border none
      outline 0
      font-weight 400
      padding-left 0

    .layout-header__search__results
      position absolute
      left - container_pad
      width 100%
      display none

    &.is-active .layout-header__search__results
      display block
      box-shadow downshadow

    .search__results__list
      list-style-type none

    .search__results__result
      background backgroundgray
      padding s_margin
      padding-left container_pad
      font-size 14px
      border-top 1px solid lightgrayplus

    .layout-header__search__close
      position absolute
      right 40px
      font-size 22px
      top 0
      display none

    &.is-loading .layout-header__search__close, &.is-active .layout-header__search__close, &.has-results .layout-header__search__close
      display block


  .right
    text-align right
    margin 0 .6em

  .user
    position relative

    .username
      color lightgray
      font-weight normal
      font-size 14px
      position relative

    .username:after
      content "â–¼"
      color #aaa
      font-size 8px
      vertical-align middle
      margin-left 0.3em

  .logo
    .logo-icon svg
      fill lightgray
      width 30px
      height 50px

.dropdown--menu
  cursor pointer

.dropdown
  display none
  position absolute
  font-size 14px
  top topbar_h
  z-index 3001
  background-color backgroundgray
  border-top 1px solid lightgrayplus
  box-shadow downshadow

  &.dropdown--desktop-size
    width 220px
    line-height 50px
    right -30px
    padding 10px 20px 10px 10px

  .dropdown__link
    display block

.dropdown--is_active .dropdown
  display block