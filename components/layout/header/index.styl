@import '../variables'

#layout-header
  position: fixed
  top: 0
  left: 0
  height: topbar_h
  line-height: topbar_h
  width: 100%
  background-color: rgba(250, 250, 250, 1)
  padding: 0 2em 0 1em
  display: flex
  justify-content: space-between
  z-index: header_z

  .search
    flex-grow 3

    input
      width 100%
      height 100%
      font-size 14px
      background transparent
      border none
      outline 0
      font-weight 400

  .right
    flex-grow: 1
    text-align right

  .user
    position relative

    .username
      color darkgray
      font-weight bold
      font-size 14px
      position relative

    .username:after
      content "â–¼"
      color #aaa
      font-size 8px
      vertical-align middle
      margin-left 0.3em

    .dropdown
      position absolute
      top topbar_h
      right 0
      display none
      z-index 3001

    &:hover .dropdown
      display block

  span
    padding: 0 0.25em