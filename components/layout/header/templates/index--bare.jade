header#layout-header
  .logo.dropdown--menu
    .header--icon
      a(href="/").logo-icon.dropdown--menu__trigger
        include ../../../../public/images/arena-mark.svg

  unless user && user.has('username')
    .layout-header__register
      span.layout-header__login
        span(data-client="auth" href="/log_in").btn-login Login &nbsp;
      span.layout-header__or or &nbsp;
      span
        span(data-client="auth" href="/sign_up").btn-signup Sign up
