header#layout-header
  .search
    input(type="text", placeholder="Search Arena")

  .right
    if user && user.has('username')
      .user
        .username= user.get('username')
        .dropdown.dropdown--size
          ul
            li: a(href="/#{user.get('slug')}") Profile
            li: a(href="#") Settings
            li: a(href="#") Tools
            li: a(href="#") About
            li: a(href="/me/sign_out") Sign Out

    else
      .register
        span
          a(href="#log_in").btn-login Login
        span or
        span
          a(href="#log_in").btn-signup Sign Up