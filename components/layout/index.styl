@import '../../node_modules/nib'
@import '../../node_modules/jeet/stylus/jeet'
@import '../../node_modules/rupture/rupture'
@import 'variables'

global-reset()

// edit()

*
  box-sizing border-box

body, html
  font-family font_sans
  color textgray
  antialiased()

body
  padding 0 (container_pad - 10)

h1
  font-size 1.8em

h2
  font-size 1.4em
  line-height 1.3em

h3
  font-size 1.17em

h5
  font-size .83em

h6
  font-size .75em

a, .inline-link
  text-decoration: none
  color inherit
  font-weight 700
  cursor pointer

  &:hover
    color hovergray

strong
  font-weight 700

blockquote
  border-left 3px lightgrayplus solid
  padding-left 1em
  font-style italic

.abs-fill
  position absolute
  top 0
  left 0
  width 100%
  height 100%

.small-text
  font-size 12px

.valign-outer
  display table
  position absolute
  width 100%
  height 100%

.valign-inner
  display table-cell
  width 100%
  height 100%
  vertical-align middle
  text-align center

.pointer
  cursor pointer

.container
  center(1400px)

for i in (1..5)
  @media (min-width: (block_width_mar * i) + 20)
    .container
      center(block_width_mar * i)

@import 'header/index'
@import 'loader/stylesheets/loader'
@import '../modal/index'
@import '../path/stylesheets/path'
@import '../forms/stylesheets/index'
@import '../feed/stylesheets/feed'
