@import '../../node_modules/nib'
@import '../../node_modules/jeet/stylus/jeet'
@import '../../node_modules/rupture/rupture'

global-reset()

// edit()

*
  box-sizing: border-box

body, html
  font-family: Arial

input:focus {outline: none; }

h1 { font-size: 2em }
h2 { font-size: 1.5em }
h3 { font-size: 1.17em }
h5 { font-size: .83em }
h6 { font-size: .75em }

a
  text-decoration: none
  color: inherit

  &:hover
    opacity: 0.8

.container
  center(1400px)
  padding-top 100px

strong
  font-weight: bold

blockquote
  border-left: 3px solid #eee
  padding-left: 1em
  font-style: italic

@media (min-width: 2000px)
  .container 
    center(1700px)

@media (max-width: 1480px)
  .container 
    center(94%)

// colors
closed = #A0A0A0
public = #10860B
private = #B60202

@import '../topbar/index'