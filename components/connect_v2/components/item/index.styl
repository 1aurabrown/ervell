.Connect__item
  > a
    display block
    position relative
    line-height 1
    // Extra rightmost padding to account check/remove glyphs
    padding input-v-padding (input-h-padding * 3) input-v-padding input-h-padding
    border 1px solid colors-gray-lighter
    margin 0 0 -1px 0
    overflow hidden
    text-overflow ellipsis
    white-space pre
    text-align left
    font-weight normal !important // Sigh

    &:hover
      border 1px solid colors-gray-text
      z-index 1

    &:hover
    &[data-selected]
      &:after
        display block
        content '✔'
        position absolute
        top 50%
        right 1em
        transform translateY(-50%)
        color colors-gray-light

    &[data-selected]
      > span
        opacity 0.5

      &:hover:after
        content '×'
        font-size font-size-lg
        right 0.5em
