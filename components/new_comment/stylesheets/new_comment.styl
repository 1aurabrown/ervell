@import '../../layout/variables'


#lightbox__new-comment
  position relative
  z-index rotate_z
  padding 0px 20px 50px
  text-align center
  background-color #fff

  .new-comment__field
    font-size 1em
    font-weight normal
    margin 0 auto
    width 100%
    height 45px
    max-width 550px
    line-height 1.3em
    color textgray
    background-color backgroundgray
    border 0
    padding 12px 10px
    border 1px solid bordergray

    &:hover
      background-color secondbackgroundgray
      border 1px solid bordergray

    &:focus
      background-color secondbackgroundgray
      height 100px
  
  .new-comment__submit
    font-size 1em
    position relative
    float left
    width 100%
    text-align center
    font-weight bold
    margin 20px 0 40px 0
    
    &:hover
      background-color transparent
      color hovergray
