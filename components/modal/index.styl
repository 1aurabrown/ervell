@import '../layout/variables'

// Disable scroll on body when open
body.is-modal
  overflow hidden

#modal
  z-index modal_z
  transition opacity 1.25s
  opacity 0
  color textgray
  antialiased()
  // Default is a simple fade in
  &[data-state='open'], &.is-open
    opacity 1
    transition opacity 1.25s
    > .modal-backdrop > .modal-dialog
      // Avoid transitioning the initial open
      transition all 0.25s, width 0
  // Slide modal dialog in
  &.is-slide-in
    > .modal-backdrop > .modal-dialog
      transform translateY(100px)
      transition transform 0.4s
    &[data-state='open'], &.is-open
      opacity 1
      > .modal-backdrop > .modal-dialog
        transform translateY(0)
        // Avoid transitioning the initial open
        transition all 0.25s, width 0, transform 0.4s

  &.is-loading
    > .modal-backdrop::before
      display block
      content ''

  &.confirm
    .modal-body
      text-align center
      padding-top 100px
      padding-bottom 100px
    h3
      margin-top 20px
      font-size 24px

.modal-h1
  font-size 22px

#modal
.modal-backdrop
  position fixed
  top 0
  right 0
  bottom 0
  left 0

.modal-backdrop
  background rgba(240, 240, 240, 0.85) 
  
#modal.has-nobackdrop > .modal-backdrop
  background-color transparent
  

.modal-dialog
  position fixed
  overflow-y auto
  background-color backgroundgray
  border 2px solid bordergray
  width 94%
  height 90%
  margin 1% 0 0 0
  &.is-notransition
    transition none !important

.modal-close
  position absolute
  top 30px
  right 30px
  font-size 28px
  font-weight bold
  cursor pointer
  z-index 2
  color textgray

  &:hover
    color hovergray

.modal-body
  max-width 600px
  margin auto
  vertical-align middle
  height 100%
  padding 10% 0 0 0
  transition opacity 0.25s
  &[data-state='fade-out'], &.is-fade-out
    opacity 0
  &[data-state='fade-in'], &.is-fade-in
    opacity 1

.modal-title
  position absolute
  left 30px
  top 30px
  font-size 1.8em
  font-weight bold
  margin 0
  padding 0
  border-bottom 0px solid backgroundgray

.modal-forgot
  position relative
  float right
  font-size 12px
  margin -28px 10px 0 0
  text-align right

  a
    color lightgray 
    &:hover
      color textgray 

.modal-checkbox
  display none
