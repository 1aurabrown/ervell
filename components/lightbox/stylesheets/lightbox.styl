// disable scroll
body.is-lightbox
  overflow hidden

#l-lightbox-container
  width 100%
  height 100%
  min-height 100%
  position fixed
  z-index header_z + 1
  top 0
  left 0
  color textgray
  background-color rgba(255,255,255, 0.96)
  opacity 0
  pointer-events none
  // transition(0.1s)

  &.is-active
    opacity 1
    pointer-events all

#l-lightbox-container_inner
  position absolute
  height 100%
  width 100%
  overflow scroll

.lightbox__content.valign-outer
  display block
  width 100%
  height 100%
  padding 0

.lightbox__content .valign-inner
  display block
  padding 20px

.lightbox__content__img
  max-width 80%
  max-height 100%
  position relative
  top 50%
  v-align()

.lightbox__content__media
  top 50%
  position relative
  v-align()

.lightbox__content__title
  position relative
  float left
  width 100%
  margin 20px 0 20px 0
  text-align center

.lightbox--close
  display block
  position fixed
  top 22px
  right 30px
  font-size 24px
  font-weight normal
  line-height 24px
  cursor pointer
  z-index 2
  color lightgray

  &:hover
    color hovergray

.lightbox__content__description, .lightbox__content__text
  width 100%
  max-width 600px
  min-height 400px
  margin 0 auto
  padding 0
  line-height 1.4em
  text-align left

  p
    margin 0.8em 0

.lightbox__content__description
  font-size 1em

.lightbox__content__text
  font-family Georgia
  font-size 1.2em
  line-height 1.5
  top 50%
  max-width 80%
  position relative
  v-align()

  .lightbox__content__text__inner
    padding 2em
    background-color rgba(255,255,255, 1)
    box-shadow 0px 0px 4px rgba(0,0,0,0.1)
    max-width 650px
    margin 0 auto

.lightbox__feed
  position relative
  float left
  width 100%
  height auto
  text-align center
  background-color backgroundgray
  margin 40px 0 0 0
  padding 40px 0 40px 0

  .lightbox__feed__inner
    width 65%
    margin auto

@media (max-width:500px)
  .lightbox__content
    padding 10px

  .lightbox__feed .lightbox__feed__inner
    width 100%

  .lightbox--close
    position absolute

  .lightbox__feed
    padding 20px 0 20px 0

