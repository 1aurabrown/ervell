// disable scroll
body.is-lightbox
  overflow hidden

#l-lightbox-container
  width 100%
  height 100%
  min-height 100%
  position fixed
  z-index header_z + 1
  top 0
  left 0
  color textgray
  background-color rgba(255,255,255, 0.96)
  opacity 0
  pointer-events none
  // transition(0.1s)

  &.is-active
    opacity 1
    pointer-events all

#l-lightbox-container_inner
  position absolute
  height 100%
  width 100%
  overflow scroll
  -webkit-overflow-scrolling touch

.lightbox__content__img
  height 100%
  text-align center

  img
    max-width 80%
    max-height 90%
    position relative
    top 50%
    v-align()
    z-index lightbox_z + 1

.lightbox__content__text
  position relative
  left 50%
  max-width 740px
  width 100%
  min-height 80%
  top 7%
  margin 0 0 8% -370px
  text-align left
  border 1px solid bordergray
  background-color rgba(255,255,255, 1)
  box-shadow 0px 0px 20px rgba(0,0,0,0.02)
  z-index lightbox_z + 1

  .lightbox__content__text__inner
    font-family Times New Roman
    height auto
    margin 0 auto
    padding 1.8em 2em 2em 2em
    font-size 1.25em
    line-height 1.6
    color hovergray
    antialiased()

    p
      margin-bottom 1.25em

.lightbox__content__media
  height 100%
  position relative
  text-align center

  iframe
    position relative
    width w=853px
    height (w / 1.777777)
    top 50%
    v-align()
    z-index lightbox_z + 1

.lightbox__content__title
  position relative
  left 0
  width 100%
  margin 0
  padding 30px 0 20px 0
  font-size 1em
  text-align center
  font-weight bold
  color lightgray
  border-top 1px solid bordergray
  border-bottom 1px solid bordergray
  background-color #fff
  antialiased()
  
  p
    width 90%
    margin auto
    max-width 760px
    text-align left
    margin-bottom 5px

  .lightbox__content__description, .lightbox__content__source
    p
      position relative
      text-align left
      width 100%
      font-size s_caption + 1
      font-weight normal
      line-height 1.5em
      padding 5px 0 0 0
      color lightgray
      
      a
        font-weight bold

.lightbox__feed
  position relative
  width 100%
  height auto
  text-align center
  background-color #fff
  margin 0 0 0 0
  padding 60px 0 30px 0
  z-index rotate_z

  .lightbox__feed__inner
    width 65%
    margin auto
    
#lightbox__connect
  position relative
  width 100%
  height 100px
  margin 0
  text-align center
  background-color #fff
  padding 30px 0 60px 0

  #lightbox__connect__inner
    position relative
    margin 0 auto
    width 100%
    max-width 550px
    
    .button--inblock
      position relative
      border-top 1px solid bordergray
      width 125px
      margin auto
      
.directional-arrows
  position absolute
  top 48%
  cursor pointer
  color white
  padding 40% 0
  max-height 100%
  v-align()

  &:hover
    color hovergray

.directional-arrows--left
  left 0
  padding-left 120px
  padding-right 20%
  z-index lightbox_z

.directional-arrows--right
  right 0
  padding-right 120px
  padding-left 20%
  z-index lightbox_z

.lightbox--close
  display block
  position absolute
  top 12px
  right 20px
  font-size 24px
  font-weight normal
  line-height 40px
  width 40px
  height 40px
  cursor pointer
  z-index lightbox_z + 2
  text-align center
  color lightgray

  &:hover
    color hovergray

@media (max-width:(block_width_mar * 4))
  .directional-arrows--left
    left 30px
    width 150px
    text-align left
    padding-right 0
    padding-left 0

  .directional-arrows--right
    right 30px
    width 150px
    text-align right
    padding-right 0
    padding-left 0

@media (max-width:980px), (max-height:600px)
  .lightbox__content__media
    iframe
      width w=640px
      height (w / 1.777777)

@media (max-width:850px)
  .lightbox__content__text
    width 90%
    left 5%
    margin 0 0 18% 0

    .lightbox__content__text__inner
      padding 1.4em 1.8em 1.8em 1.8em
  
  .lightbox--close
    top 4px
    right 4px

  .directional-arrows--left
    left 1%
    width 100px

  .directional-arrows--right
    right 1%
    width 100px

@media (max-width:760px), (max-height:500px)
  .lightbox__content__media
    iframe
      width w=500px
      height (w / 1.777777)
      
@media (max-width:600px), (max-height:400px)
  .lightbox__content__media
    iframe
      width w=400px
      height (w / 1.777777)

@media (max-width:500px)
  .lightbox__content
    padding 10px

  .lightbox__feed .lightbox__feed__inner
    width 100%

  .lightbox__feed
    padding 20px 0 20px 0
  
  .lightbox__content__media
    iframe
      width w=310px
      height (w / 1.777777)

