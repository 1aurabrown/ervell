// disable scroll
body.is-lightbox
  overflow hidden

#l-lightbox-container
  width 100%
  height 100%
  min-height 100%
  position fixed
  z-index header_z + 1
  top 0
  left 0
  color textgray
  background-color rgba(255,255,255, 0.95)
  opacity 0
  pointer-events none
  // transition(0.1s)

  &.is-active
    opacity 1
    pointer-events all

#l-lightbox-container_inner
  position relative
  height 100%
  width 100%
  overflow scroll

.lightbox__content.valign-outer
  position static

.lightbox__content
  padding s_margin * 4
  padding-bottom topbar_h

.lightbox__content__title
  padding-top 1.5em
  font-size 1em

.lightbox--close
  display block
  position absolute
  top 32px
  right 32px
  font-size 28px
  line-height 28px
  cursor pointer
  z-index 2
  color textgray

  &:hover
    color hovergray

.lightbox__content__description, .lightbox__content__text
  width 600px
  margin 0 auto
  padding 0
  line-height 1.4em
  text-align left

  p
    margin 0.8em 0

.lightbox__content__description
  font-size 1em

.lightbox__content__text
  box-shadow 0px 0px 4px rgba(0,0,0,0.1)
  font-family Georgia
  padding 2em
  font-size 1em
  line-height 1.5
  background-color rgba(255,255,255, 1)

.lightbox__content__img
  max-width 80%
  max-height 80%

.lightbox__feed
  height auto
  text-align center
  background-color backgroundgray
  border-top 0
  padding 50px 0 50px 0

  .lightbox__feed__inner
    width 65%
    margin auto



