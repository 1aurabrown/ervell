// disable scroll
body.is-lightbox
  overflow hidden

#l-lightbox-container
  width 100%
  height 100%
  min-height 100%
  position fixed
  z-index lightbox_z
  top topbar_h
  left 0
  background-color rgba(255,255,255, 1)
  display none

  &.is-active
    display block

#l-lightbox-container_inner
  position relative
  height 100%
  width 100%
  overflow scroll

.lightbox__content
  padding s_margin * 2
  padding-bottom topbar_h

.lightbox__content__title
  padding-bottom 1.5em

.lightbox--close
  display block
  position absolute
  top s_margin * 2
  right s_margin * 2

.lightbox__content__description, .lightbox__content__text
  padding-top 2em
  width 600px
  margin 0 auto
  line-height 1.4em
  text-align left

  p
    margin 1em 0

.lightbox__content__text
  box-shadow 1px 1px 5px rgba(0,0,0,0.1)
  font-family Georgia
  padding 2em
  font-size 18px
  line-height 1.6


