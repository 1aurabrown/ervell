@import '../../layout/variables'

.grid__block--new-block .grid__block__inner
  border 2px solid bordergray

.grid__block--new-block.active .grid__block__inner
  border 1px solid bordergray

 .grid__block--new-block__plus_button
  color lightgray
  padding 25px 25px 25px 25px
  transition (0.6s)

.grid__block--new-block:hover .grid__block--new-block__plus_button
  color lightgray

.grid__block--new-block__title
  color lightgray

.grid__block--new-block__form
  pointer-events none
  padding 1em

.grid__block--new-block__form.active
  opacity 1
  pointer-events all
  background-color backgroundgray

.grid__block--new-block__content-field
  width 100%
  height 200px
  border 0
  antialiased()
  &:hover
    background-color backgroundgray

.grid__block--new-block__cancel
  position absolute
  bottom 1em
  right 1em

textarea::-webkit-input-placeholder 
  padding 40px 0 0 0
  font-size 22px
  line-height 1.3em
  text-align center

textarea:-moz-placeholder
  font-size 22px
  line-height 1.3em
  text-align center