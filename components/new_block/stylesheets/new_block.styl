@import '../../layout/variables'

/* add block field */

.grid__block--new-block .grid__block__inner
  background-color backgroundgray

.grid__block--new-block .grid__block__inner:hover
  border 1px solid bordergray
  cursor text

.grid__block--new-block fieldset
  margin 0

.grid__block--new-block__content-field
  opacity 0
  width 100%
  height 248px
  border 0
  padding 90px 0 0 0
  vertical-align middle
  background none
  antialiased()

.grid__block__inner:hover .grid__block--new-block__content-field
  opacity 1

.grid__block--new-block__content-field::-webkit-input-placeholder
  font-size 22px
  line-height 1.3em
  text-align center

.grid__block--new-block__content-field:-moz-placeholder
  font-size 22px
  line-height 1.3em
  text-align center

.grid__block--new-block__submit:hover
  color hovergray
  cursor pointer

/* add block behavior */

.grid__block--new-block__title
  color lightgray

.grid__block--new-block__form
  padding 0.2em

.grid__block--new-block__form.active
  opacity 1
  pointer-events all

.grid__block--new-block__cancel
  position absolute
  bottom 1em
  right 1em