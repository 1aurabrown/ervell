.LoggedOutHeader
  position fixed
  transform translateZ(0)
  display flex
  flex-direction row
  justify-content space-between
  top 0
  right 0
  left 0
  padding 1em 0.75em
  font-size font-size-base
  line-height 1
  z-index 1

  &__logo
    // **
    > span
      display inline-block
      position relative
      width @font-size * 2
      height @font-size
      top 0.125em
      margin-right 0.25em

      > svg
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        fill colors-gray-text

    &:hover
      > span > svg
        fill colors-gray-hover

  &__cta
    > a
      display inline-block
      font-weight bold

    // "Join"
    > a:first-child
    // "or"
    > span
      visibility hidden

  // States
  &--active
    .LoggedOutHeader
      &__cta
        // "Join"
        > a:first-child
        // "or"
        > span
          visibility visible

+mobile()
  .LoggedOutHeader
    background-color white
    padding 1em

    &__logo
      display none
