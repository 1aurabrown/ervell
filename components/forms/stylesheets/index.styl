input
  width 100%
  height 45px
  font-size 16px
  font-weight 400
  margin 0 0 0 0
  background-color backgroundgray
  border none
  border-bottom 0px solid lightgray
  padding 0 0 0 10px
  antialiased()

  ::-webkit-input-placeholder
     color lightgray

  :-moz-placeholder /* Firefox 18- */
     color lightgray

  ::-moz-placeholder /* Firefox 19+ */
     color lightgray

  :-ms-input-placeholder
     color lightgray

  &:focus
    outline none
    border-bottom 1px solid textgray

  &:focus::-webkit-input-placeholder
    color textgray

  &:focus:-moz-placeholder /* Firefox 18- */
    color textgray

  &:focus::-moz-placeholder /* Firefox 19+ */
    color textgray

  &:focus:-ms-input-placeholder
    color textgray

fieldset
  margin 0.6em 0

textarea
  resize none
  outline none
  padding 1em
  font-size 18px
  font-family Arial
  font-weight 100
  line-height 1.6
  color textgray

button
  width 100%
  height 45px
  border 0
  border-top 1px solid textgray
  outline none
  background-color transparent
  cursor pointer
  font-size 16px
  font-weight bold
  color lightgray

  &:hover
    background-color backgroundgray
    color textgray

  &.button--wide
    width 100%

  &.button--dark
    border none
    background-color #000
    color #fff

  color textgray
  margin 20px 0 0 0
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

  &:hover
    background-color transparent
    border-top 1px solid public
    color public
    transition(0.1s)

  &:active
    background-color white
    border-bottom 0
