input
  font-size 1em
  font-weight normal
  margin 0 0 0 0
  color textgray
  background-color backgroundgray
  border 0px solid white
  padding 0 0 0 10px
  font-family font_sans
  antialiased()

  ::-webkit-input-placeholder
     color lightgray
     font-family font_sans

  :-moz-placeholder /* Firefox 18- */
     color lightgray
     font-family font_sans

  ::-moz-placeholder /* Firefox 19+ */
     color lightgray
     font-family font_sans

  :-ms-input-placeholder
     color lightgray
     font-family font_sans

  &:focus
    outline none
    border 0px solid bordergray
    background-color secondbackgroundgray
    // transition(0.1s)

  &:focus::-webkit-input-placeholder
    color textgray

  &:focus:-moz-placeholder /* Firefox 18- */
    color textgray

  &:focus::-moz-placeholder /* Firefox 19+ */
    color textgray

  &:focus:-ms-input-placeholder
    color textgray

  &.input--wide
    width: 100%
    height 50px

  &.input--relative
    position relative
    float left
    margin 20px 0 0 0


fieldset
  margin 0.6em 0

textarea
  resize none
  outline none
  padding 1em
  font-size 1em
  font-family font_sans
  font-weight 100
  line-height 1.6
  color textgray

button
  border 0
  outline none
  background-color transparent
  cursor pointer
  font-size 2em
  font-weight bold

  &:hover
    background-color backgroundgray

  &.button--border
    border-top 1px solid textgray

    &:hover
      background-color transparent
      border-top 1px solid public
      color public
      // transition(0.1s)

  &.button--wide
    width 100%
    height 45px

  &.button--dark
    border none
    background-color #000
    color #fff

  &.button--relative
    position relative
    float left
    margin 40px 0 0 0

  &.button--add
    font-size s_caption

  color textgray
  margin 20px 0 0 0
  antialiased()

  &:active
    background-color transparent
    border-bottom 0

.button--inblock
  position absolute
  bottom 0
  width 92%
  height 60px
  line-height 58px
  left 4%
  font-size 15px
  font-weight bold
  color textgray
  border-top 1px solid bordergray
  padding 0

  &:hover
    background-color transparent
    color hovergray
    cursor pointer
