@import '../../layout/variables'

.new-channel-dropdown__container
  border 0px

  .grid__block
    margin 0
    max-width 298px
    min-width 298px
    padding-top 100%

  .grid__block__inner
    height 298px

  .grid__block--channel .grid__block__content
    padding 0

  .grid__block__editable-title, .grid__block__editable-title:focus
    color inherit
    font-size 1.5em
    text-align center
    padding 0

  .grid__block__channel__stats
    visibility visible

  .grid__block__lower
    border 1px solid lightgray
    border-top 0px
    padding-top 10px
  
  privacy-color('.is-active.metadata--selector__option--', color)

  .grid__block__privacy--setting
    font-size s_caption
    font-weight bold
    text-align center
    line-height 2

    label
      font-weight normal

    .breadcrumb li
      float none
      display inline-block
      color lightgray
      font-weight bold

      a:hover
        color hovergray
  
  .button--base
    &:hover
      background-color transparent

@media (max-width:500px)
  .new-channel-dropdown__container
    .grid__block
      width 100%
      max-width 100%
      left 0
      top 0
      padding-top 37%

    .grid__block__inner
      height 120px

      .grid__block__channel__stats
        display none