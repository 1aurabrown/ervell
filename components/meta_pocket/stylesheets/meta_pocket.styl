.metadata--container
  padding 0
  height auto
  font-size s_caption + 1
  border-bottom 1px solid #fff

  a
    font-weight bold
    color textgray

    &:hover
      color hovergray
      
  &:hover
    cursor pointer
    border-bottom 1px solid #cacaca
      
    .metadata--container__settings__done:before
      opacity 1
    
.metadata--container__settings__done
  text-align center
  padding 0 0 8px 0
  display block

.metadata--container__settings__done:before
  color lightgray
  content 'more'
  opacity 0

.settings-is-active .metadata--container__settings__done:before
  content 'close'

.metadata__column
  display inline-block
  vertical-align top
  margin 0 20px 0 0
  width 225px
  height auto
  max-height 163px
  min-height 80px
  overflow hidden
  padding-bottom 10px
  line-height 1.5
  color textgray

  &:hover
    color hovergray

  &.is-settings
    display none

  &.is-expanded
    max-height none

  .channel__privacy--setting
    text-align left

.settings-is-active .metadata__column.is-settings
  display inline-block

.metadata__title
  width 100%
  color lightgray

.metadata__text, .metadata__content
  width 100%
  font-weight normal
  color lightgray

.metadata--selector__option
  color lightgray
  font-weight bold
  hover-color hovergray

  &:hover
    color hovergray

  &.is-active
    color hovergray

    &:hover
      cursor default

privacy-color('.is-active.metadata--selector__option--', color)

.metadata__expand
  display none
  position absolute
  bottom 0
  width inherit
  height 40px
  font-weight bold
  background-color rgba(255,255,255,0.9)
  cursor pointer
  text-align center
  line-height 42px
  font-size s_caption + 1

  &:after
    content 'See all'

  &:hover
    color hovergray

  &.metadata__expand--text:after
    content 'Hide'